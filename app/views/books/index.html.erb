<div class="space-y-6">
  <div class="sm:flex sm:items-center sm:justify-between">
    <div>
      <h1 class="text-3xl font-bold text-gray-900">My Library</h1>
      <p class="mt-2 text-sm text-gray-700">Your complete reading collection - books, imported history, and reading status</p>
    </div>
    <div class="mt-4 sm:mt-0 space-x-3">
      <%= link_to "Add New Book", new_book_path, class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
      <%= link_to "Import Goodreads", new_import_path, class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
    </div>
  </div>

  <!-- Library Summary -->
  <div class="grid grid-cols-2 md:grid-cols-5 gap-4">
    <div class="bg-white p-4 rounded-lg border border-gray-200 text-center">
      <div class="text-2xl font-bold text-indigo-600"><%= @library_summary[:total] %></div>
      <div class="text-sm text-gray-600">Total Items</div>
    </div>
    <div class="bg-white p-4 rounded-lg border border-gray-200 text-center">
      <div class="text-2xl font-bold text-blue-600"><%= @library_summary[:to_read] %></div>
      <div class="text-sm text-gray-600">To Read</div>
    </div>
    <div class="bg-white p-4 rounded-lg border border-gray-200 text-center">
      <div class="text-2xl font-bold text-yellow-600"><%= @library_summary[:reading] %></div>
      <div class="text-sm text-gray-600">Reading</div>
    </div>
    <div class="bg-white p-4 rounded-lg border border-gray-200 text-center">
      <div class="text-2xl font-bold text-green-600"><%= @library_summary[:read] %></div>
      <div class="text-sm text-gray-600">Read</div>
    </div>
    <div class="bg-white p-4 rounded-lg border border-gray-200 text-center">
      <div class="text-2xl font-bold text-purple-600"><%= @library_summary[:imported] %></div>
      <div class="text-sm text-gray-600">Imported</div>
    </div>
  </div>

  <!-- Filter menu -->
  <div class="bg-white p-4 rounded-lg border border-gray-200">
    <div class="flex flex-wrap gap-2">
      <%= link_to "All Items", books_path, class: "px-4 py-2 rounded-md text-sm font-medium #{@status ? 'text-gray-700 bg-gray-100 hover:bg-gray-200' : 'text-white bg-indigo-600 hover:bg-indigo-700'}" %>
      
      <% Book.statuses.keys.each do |status| %>
        <%= link_to status.humanize, books_path(status: status),
            class: "px-4 py-2 rounded-md text-sm font-medium #{@status == status ? 'text-white bg-indigo-600 hover:bg-indigo-700' : 'text-gray-700 bg-gray-100 hover:bg-gray-200'}" %>
      <% end %>
      
      <%= link_to "Imported History", books_path(status: 'imported'), 
          class: "px-4 py-2 rounded-md text-sm font-medium #{@status == 'imported' ? 'text-white bg-indigo-600 hover:bg-indigo-700' : 'text-gray-700 bg-gray-100 hover:bg-gray-200'}" %>
    </div>
  </div>

  <!-- Next Book button -->
  <div class="bg-gradient-to-r from-green-500 to-emerald-600 p-6 rounded-lg shadow-sm">
    <div class="text-center">
      <h2 class="text-xl font-semibold text-white mb-2">Ready for your next adventure?</h2>
      <%= link_to "ðŸ“– What's my next book?", next_book_books_path, class: "inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-md text-green-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-white shadow-sm" %>
    </div>
  </div>

  <!-- Content based on filter -->
  <% if @status == 'imported' %>
    <!-- Show imported books -->
    <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4">
      <% @books.imported.each do |book| %>
        <div class="bg-white overflow-hidden shadow rounded-lg border border-gray-200 hover:shadow-md transition-shadow duration-200">
          <div class="p-6">
            <div class="flex items-center justify-between mb-2">
              <h3 class="text-lg font-semibold text-gray-900 truncate"><%= book.title %></h3>
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-purple-100 text-purple-800">
                Imported
              </span>
            </div>
            
            <p class="text-gray-600 text-sm mb-3">By <%= book.author %></p>
            
            <div class="flex items-center justify-between">
              <div class="flex items-center">
                <% if book.rating %>
                  <div class="flex items-center">
                    <% book.rating.times do %>
                      <svg class="w-3 h-3 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                        <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                      </svg>
                    <% end %>
                    <span class="ml-1 text-sm text-gray-600"><%= book.rating %></span>
                  </div>
                <% else %>
                  <span class="text-sm text-gray-400">No rating</span>
                <% end %>
              </div>
              
              <div class="text-sm text-gray-500">
                <%= book.created_at.strftime("%b %Y") %>
              </div>
            </div>
            
            <!-- Additional imported book info -->
            <% if book.exclusive_shelf.present? %>
              <div class="mt-2 text-xs text-gray-500">
                Shelf: <%= book.exclusive_shelf.humanize %>
              </div>
            <% end %>
            
            <% if book.pages.present? %>
              <div class="mt-1 text-xs text-gray-500">
                <%= book.pages %> pages
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  <% elsif @status == 'manual' %>
    <!-- Show manually added books -->
    <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4">
      <% @books.manual.each do |book| %>
        <div class="bg-white overflow-hidden shadow rounded-lg border border-gray-200 hover:shadow-md transition-shadow duration-200">
          <div class="p-6">
            <div class="flex items-center justify-between mb-2">
              <h3 class="text-lg font-semibold text-gray-900 truncate"><%= book.title %></h3>
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                <%= book.status.humanize %>
              </span>
            </div>
            
            <p class="text-gray-600 text-sm mb-3">By <%= book.author %></p>
            
            <div class="flex items-center justify-between">
              <div class="flex items-center">
                <% if book.rating %>
                  <div class="flex items-center">
                    <% book.rating.times do %>
                      <svg class="w-3 h-3 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                        <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                      </svg>
                    <% end %>
                    <span class="ml-1 text-sm text-gray-600"><%= book.rating %></span>
                  </div>
                <% else %>
                  <span class="text-sm text-gray-400">No rating</span>
                <% end %>
              </div>
              
              <div class="flex space-x-2">
                <%= link_to "View", book_path(book), class: "text-indigo-600 hover:text-indigo-900 text-sm font-medium" %>
                <%= link_to "Edit", edit_book_path(book), class: "text-gray-600 hover:text-gray-900 text-sm font-medium" %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <!-- Show all books -->
    <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4">
      <% @books.each do |book| %>
        <div class="bg-white overflow-hidden shadow rounded-lg border border-gray-200 hover:shadow-md transition-shadow duration-200">
          <div class="p-6">
            <div class="flex items-center justify-between mb-2">
              <h3 class="text-lg font-semibold text-gray-900 truncate"><%= book.title %></h3>
              <div class="flex items-center space-x-2">
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                  <%= book.status.humanize %>
                </span>
                <span class="inline-flex items-center px-2 py-0.5 rounded-full text-xs font-medium 
                  <%= book.imported? ? 'bg-purple-100 text-purple-800' : 'bg-green-100 text-green-800' %>">
                  <%= book.source_type %>
                </span>
              </div>
            </div>
            
            <p class="text-gray-600 text-sm mb-3">By <%= book.author %></p>
            
            <div class="flex items-center justify-between">
              <div class="flex items-center">
                <% if book.rating %>
                  <div class="flex items-center">
                    <% book.rating.times do %>
                      <svg class="w-3 h-3 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                        <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                      </svg>
                    <% end %>
                    <span class="ml-1 text-sm text-gray-600"><%= book.rating %></span>
                  </div>
                <% else %>
                  <span class="text-sm text-gray-400">No rating</span>
                <% end %>
              </div>
              
              <div class="flex space-x-2">
                <%= link_to "View", book_path(book), class: "text-indigo-600 hover:text-indigo-900 text-sm font-medium" %>
                <%= link_to "Edit", edit_book_path(book), class: "text-gray-600 hover:text-gray-900 text-sm font-medium" %>
              </div>
            </div>
            
            <!-- Additional info for imported books -->
            <% if book.imported? && book.exclusive_shelf.present? %>
              <div class="mt-2 text-xs text-gray-500">
                Original shelf: <%= book.exclusive_shelf.humanize %>
              </div>
            <% end %>
            
            <% if book.pages.present? %>
              <div class="mt-1 text-xs text-gray-500">
                <%= book.pages %> pages
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>

  <% if (@status == 'imported' && @books.imported.empty?) || (@status == 'manual' && @books.manual.empty?) || (@status != 'imported' && @books.manual.empty?) %>
    <div class="text-center py-12">
      <svg class="mx-auto h-8 w-8 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
      </svg>
      <h3 class="mt-2 text-sm font-medium text-gray-900">
        <% if @status == 'imported' %>
          No imported books found
        <% elsif @status == 'manual' %>
          No manually added books found
        <% else %>
          No books found
        <% end %>
      </h3>
      <p class="mt-1 text-sm text-gray-500">
        <% if @status == 'imported' %>
          Import your Goodreads library to see your reading history here.
        <% elsif @status == 'manual' %>
          Get started by adding your first book to your library.
        <% else %>
          Get started by adding your first book to your library.
        <% end %>
      </p>
      <div class="mt-6 space-x-3">
        <% if @status == 'imported' %>
          <%= link_to "Import Goodreads", new_import_path, class: "inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
        <% elsif @status == 'manual' %>
          <%= link_to "Add Book", new_book_path, class: "inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
        <% else %>
          <%= link_to "Add Book", new_book_path, class: "inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
