<div class="space-y-8">
  <!-- Header Section -->
  <div class="sm:flex sm:items-center sm:justify-between">
    <div>
      <h1 class="text-4xl font-bold text-gray-900">My Library</h1>
      <p class="mt-3 text-lg text-gray-600">Your complete reading collection and insights from your Goodreads data</p>
    </div>
    <div class="mt-6 sm:mt-0 flex flex-col sm:flex-row gap-3">
      <%= link_to "Add New Book", new_book_path, 
          class: "inline-flex items-center px-6 py-3 border border-transparent rounded-lg shadow-sm text-sm font-medium text-white bg-gradient-to-r from-indigo-600 to-purple-600 hover:from-indigo-700 hover:to-purple-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-all duration-200" %>
      <%= link_to "Import Goodreads", new_import_path, 
          class: "inline-flex items-center px-6 py-3 border border-gray-300 rounded-lg shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-all duration-200" %>
    </div>
  </div>

  <!-- Success Message for Imported Books -->
  <% if @show_imported && flash[:notice] %>
    <div class="bg-green-50 border border-green-200 rounded-lg p-4">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-green-400" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3">
          <p class="text-sm font-medium text-green-800">
            <%= flash[:notice] %>
          </p>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Enhanced Library Summary - Focus on Reading Status -->
  <div class="bg-gradient-to-r from-gray-50 to-white rounded-2xl p-8 border border-gray-100">
    <h2 class="text-xl font-semibold text-gray-900 mb-6">Reading Overview</h2>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      <!-- To Read -->
      <div class="text-center bg-white rounded-xl p-6 shadow-sm border border-gray-100">
        <div class="text-4xl font-bold text-blue-600 mb-2"><%= @library_summary[:to_read] %></div>
        <div class="text-lg font-semibold text-gray-900 mb-2">To Read</div>
        <div class="text-sm text-gray-600 mb-4">Books in your queue</div>
        <div class="w-16 h-2 bg-blue-500 rounded-full mx-auto"></div>
      </div>
      
      <!-- Currently Reading -->
      <div class="text-center bg-white rounded-xl p-6 shadow-sm border border-gray-100">
        <div class="text-4xl font-bold text-yellow-600 mb-2"><%= @library_summary[:reading] %></div>
        <div class="text-lg font-semibold text-gray-900 mb-2">Reading</div>
        <div class="text-sm text-gray-600 mb-4">Currently in progress</div>
        <div class="w-16 h-2 bg-yellow-500 rounded-full mx-auto"></div>
      </div>
      
      <!-- Completed -->
      <div class="text-center bg-white rounded-xl p-6 shadow-sm border border-gray-100">
        <div class="text-4xl font-bold text-green-600 mb-2"><%= @library_summary[:read] %></div>
        <div class="text-lg font-semibold text-gray-900 mb-2">Completed</div>
        <div class="text-sm text-gray-600 mb-4">Books you've finished</div>
        <div class="w-16 h-2 bg-green-500 rounded-full mx-auto"></div>
      </div>
    </div>
    
    <!-- Total Books -->
    <div class="mt-8 text-center">
      <div class="inline-flex items-center px-6 py-3 bg-gray-900 rounded-full">
        <span class="text-2xl font-bold text-white mr-3"><%= @library_summary[:total] %></span>
        <span class="text-white font-medium">Total Books in Your Library</span>
      </div>
    </div>
  </div>

  <!-- Enhanced Filter Menu - Focus on Reading Status -->
  <div class="bg-white rounded-2xl p-6 border border-gray-200 shadow-sm">
    <h3 class="text-lg font-semibold text-gray-900 mb-4">Filter by Reading Status</h3>
    <div class="flex flex-wrap gap-3">
      <%= link_to "All Books", books_path, 
          class: "px-5 py-2.5 rounded-lg text-sm font-medium transition-all duration-200 #{@status || @show_imported ? 'text-gray-700 bg-gray-100 hover:bg-gray-200' : 'text-white bg-gradient-to-r from-indigo-600 to-purple-600 hover:from-indigo-700 hover:to-purple-700 shadow-sm'}" %>
      
      <% UserReading.statuses.keys.each do |status| %>
        <%= link_to status.humanize, books_path(status: status),
            class: "px-5 py-2.5 rounded-lg text-sm font-medium transition-all duration-200 #{@status == status ? 'text-white bg-gradient-to-r from-indigo-600 to-purple-600 hover:from-indigo-700 hover:to-purple-700 shadow-sm' : 'text-gray-700 bg-gray-100 hover:bg-gray-200'}" %>
      <% end %>
      
      <%= link_to "Imported Books", books_path(imported: true), 
          class: "px-5 py-2.5 rounded-lg text-sm font-medium transition-all duration-200 #{@show_imported ? 'text-white bg-gradient-to-r from-indigo-600 to-purple-600 hover:from-indigo-700 hover:to-purple-700 shadow-sm' : 'text-gray-700 bg-gray-100 hover:bg-gray-200'}" %>
    </div>
  </div>

  <!-- Enhanced Next Book CTA - Sleek Design -->
  <div class="bg-gradient-to-r from-emerald-500 to-teal-600 rounded-2xl p-8 shadow-lg">
    <div class="text-center">
      <h2 class="text-2xl font-bold text-white mb-3">Ready for your next adventure?</h2>
      <p class="text-emerald-100 mb-6">Get AI-powered recommendations based on your reading taste</p>
      <%= link_to "ðŸ“– What's my next book?", next_book_books_path, 
          class: "inline-flex items-center px-8 py-4 border border-transparent text-lg font-semibold rounded-xl text-emerald-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-white shadow-lg transition-all duration-200 transform hover:scale-105" %>
    </div>
  </div>

  <!-- Book Grid - Moved above footer -->
  <div class="space-y-6">
    <% if @show_imported %>
      <!-- Special header for imported books -->
      <div class="bg-gradient-to-r from-purple-50 to-indigo-50 rounded-xl p-6 border border-purple-200">
        <div class="flex items-center justify-between">
          <div>
            <h3 class="text-2xl font-bold text-gray-900 mb-2">ðŸ“š Imported from Goodreads</h3>
            <p class="text-gray-600">You have <%= @imported_count %> imported books in your library</p>
          </div>
          <div class="flex items-center space-x-4">
            <div class="text-right">
              <div class="text-3xl font-bold text-purple-600"><%= @imported_count %></div>
              <div class="text-sm text-gray-500">Books imported</div>
            </div>
            <%= link_to "View All Books", books_path, 
                class: "inline-flex items-center px-4 py-2 border border-purple-300 rounded-lg text-sm font-medium text-purple-700 bg-white hover:bg-purple-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-purple-500 transition-all duration-200" %>
          </div>
        </div>
      </div>
    <% else %>
      <h3 class="text-2xl font-bold text-gray-900">
        <% if @status %>
          <%= @status.humanize %> Books
        <% else %>
          All Books
        <% end %>
      </h3>
    <% end %>
    
    <% if @books.any? %>
      <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4">
        <% @books.each do |book| %>
          <div class="bg-white overflow-hidden shadow-sm rounded-2xl border border-gray-100 hover:shadow-lg transition-all duration-300 transform hover:-translate-y-1">
            <div class="p-6">
              <div class="flex items-center justify-between mb-3">
                <h3 class="text-lg font-semibold text-gray-900 truncate flex-1 mr-3"><%= book.title %></h3>
                <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium 
                  <%= case book.status
                      when 'to_read' then 'bg-blue-100 text-blue-800'
                      when 'reading' then 'bg-yellow-100 text-yellow-800'
                      when 'read' then 'bg-green-100 text-green-800'
                      else 'bg-gray-100 text-gray-800'
                      end %>">
                  <%= book.status.humanize %>
                </span>
              </div>
              
              <p class="text-gray-600 text-sm mb-4">By <%= book.author %></p>
              
              <div class="space-y-3">
                <!-- Rating -->
                <div class="flex items-center justify-between">
                  <div class="flex items-center">
                    <% if book.rating %>
                      <div class="flex items-center">
                        <% book.rating.times do %>
                          <svg class="w-4 h-4 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                            <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                          </svg>
                        <% end %>
                        <span class="ml-2 text-sm font-medium text-gray-700"><%= book.rating %>/5</span>
                      </div>
                    <% else %>
                      <span class="text-sm text-gray-400">No rating</span>
                    <% end %>
                  </div>
                  
                  <div class="flex space-x-2">
                    <%= link_to "View", book_path(book), class: "text-indigo-600 hover:text-indigo-900 text-sm font-medium transition-colors duration-200" %>
                    <%= link_to "Edit", edit_book_path(book), class: "text-gray-600 hover:text-gray-900 text-sm font-medium transition-colors duration-200" %>
                  </div>
                </div>
                
                <!-- Additional info for imported books -->
                <% if book.imported? && book.exclusive_shelf.present? %>
                  <div class="flex items-center text-xs text-gray-500">
                    <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
                    </svg>
                    Original shelf: <%= book.exclusive_shelf.humanize %>
                  </div>
                <% end %>
                
                <% if book.imported? %>
                  <div class="flex items-center text-xs text-gray-500">
                    <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
                    </svg>
                    Imported from Goodreads
                  </div>
                <% end %>
                
                <% if book.pages.present? %>
                  <div class="flex items-center text-xs text-gray-500">
                    <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
                    </svg>
                    <%= book.pages %> pages
                  </div>
                <% end %>
                
                <% if book.date_read.present? %>
                  <div class="flex items-center text-xs text-gray-500">
                    <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                    </svg>
                    Finished: <%= book.date_read.strftime("%b %Y") %>
                  </div>
                <% end %>
                
                <% if book.date_added.present? %>
                  <div class="flex items-center text-xs text-gray-500">
                    <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                    Added: <%= book.date_added.strftime("%b %Y") %>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="text-center py-16">
        <div class="mx-auto h-16 w-16 mb-6 flex items-center justify-center rounded-full bg-gray-100">
          <svg class="h-8 w-8 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
          </svg>
        </div>
        <h3 class="text-lg font-semibold text-gray-900 mb-2">
          <% if @show_imported %>
            No imported books yet
          <% elsif @status %>
            No <%= @status.humanize.downcase %> books yet
          <% else %>
            Your library is empty
          <% end %>
        </h3>
        <p class="text-gray-600 mb-8 max-w-md mx-auto">
          <% if @show_imported %>
            Import your Goodreads library to see your complete reading history and get personalized recommendations.
          <% elsif @status %>
            Start building your <%= @status.humanize.downcase %> collection by adding books or importing from Goodreads.
          <% else %>
            Start building your personal library by adding books manually or importing from Goodreads.
          <% end %>
        </p>
        <div class="flex flex-col sm:flex-row gap-3 justify-center">
          <% if @show_imported %>
            <%= link_to "Import Goodreads", new_import_path, 
                class: "inline-flex items-center px-6 py-3 border border-transparent shadow-sm text-sm font-medium rounded-lg text-white bg-gradient-to-r from-indigo-600 to-purple-600 hover:from-indigo-700 hover:to-purple-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-all duration-200" %>
          <% else %>
            <%= link_to "Add Book", new_book_path, 
                class: "inline-flex items-center px-6 py-3 border border-transparent shadow-sm text-sm font-medium rounded-lg text-white bg-gradient-to-r from-indigo-600 to-purple-600 hover:from-indigo-700 hover:to-purple-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-all duration-200" %>
            <%= link_to "Import Goodreads", new_import_path, 
                class: "inline-flex items-center px-6 py-3 border border-gray-300 shadow-sm text-sm font-medium rounded-lg text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-all duration-200" %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
