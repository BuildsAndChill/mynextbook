<div id="clearLibraryModal" class="fixed inset-0 bg-gray-600 bg-opacity-50 overflow-y-auto h-full w-full hidden z-50">
  <div class="relative top-4 sm:top-20 mx-auto p-4 sm:p-5 border w-11/12 sm:w-96 shadow-lg rounded-md bg-white">
    <div class="mt-3 text-center">
      <div class="mx-auto flex items-center justify-center h-10 sm:h-12 w-10 sm:w-12 rounded-full bg-red-100 mb-4">
        <svg class="h-5 sm:h-6 w-5 sm:w-6 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.732 16.5c-.77.833.192 2.5 1.732 2.5z"></path>
        </svg>
      </div>
      <h3 class="text-base sm:text-lg font-medium text-gray-900 mb-2">Clear Your Library?</h3>
      <div class="mt-2 px-4 sm:px-7 py-3">
        <p class="text-xs sm:text-sm text-gray-500 mb-4">
          This will permanently delete all <strong><%= @library_summary[:total] %></strong> books from your library, including:
        </p>
        <ul class="text-xs sm:text-sm text-gray-600 text-left space-y-1 mb-4 sm:mb-6">
          <li>‚Ä¢ All reading history and ratings</li>
          <li>‚Ä¢ Books marked as "to read"</li>
          <li>‚Ä¢ Currently reading progress</li>
          <li>‚Ä¢ Imported Goodreads data</li>
        </ul>
        <p class="text-xs sm:text-sm text-red-600 font-medium">
          ‚ö†Ô∏è This action cannot be undone!
        </p>
      </div>
      <div class="flex flex-col sm:flex-row justify-center gap-2 sm:gap-3">
        <button onclick="hideClearLibraryModal()" 
                class="w-full sm:w-auto px-4 py-2 bg-gray-300 text-gray-700 rounded-md text-sm font-medium hover:bg-gray-400 transition-colors duration-200">
          Cancel
        </button>
        <button onclick="clearLibrary()" 
                class="w-full sm:w-auto px-4 py-2 bg-red-600 text-white rounded-md text-sm font-medium hover:bg-red-700 transition-colors duration-200">
          Yes, Clear All Books
        </button>
      </div>
    </div>
  </div>
</div>

<script>
  function showClearLibraryModal() {
    document.getElementById('clearLibraryModal').classList.remove('hidden');
  }
  
  function hideClearLibraryModal() {
    document.getElementById('clearLibraryModal').classList.add('hidden');
  }
  
  function clearLibrary() {
    // Show loading state
    const button = event.target;
    const originalText = button.textContent;
    button.textContent = 'Clearing...';
    button.disabled = true;
    
    // Make AJAX request to clear library
    fetch('<%= clear_library_books_path %>', {
      method: 'DELETE',
      headers: {
        'X-CSRF-Token': document.querySelector('meta[name="csrf-token"]').getAttribute('content'),
        'Content-Type': 'application/json'
      }
    })
    .then(response => response.json())
    .then(data => {
      if (data.success) {
        // Hide modal and reload page
        hideClearLibraryModal();
        window.location.reload();
      } else {
        alert('Error: ' + (data.error || 'Failed to clear library'));
        button.textContent = originalText;
        button.disabled = false;
      }
    })
    .catch(error => {
      console.error('Error:', error);
      alert('An error occurred while clearing the library');
      button.textContent = originalText;
      button.disabled = false;
    });
  }
  
  // Close modal when clicking outside
  document.getElementById('clearLibraryModal').addEventListener('click', function(e) {
    if (e.target === this) {
      hideClearLibraryModal();
    }
  });
</script>
