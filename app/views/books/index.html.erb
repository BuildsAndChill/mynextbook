<div class="min-h-screen bg-gradient-to-br from-indigo-50 via-white to-purple-50 py-8">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header Section -->
    <div class="text-center mb-8">
      <h1 class="text-3xl sm:text-4xl md:text-5xl font-bold text-gray-900 mb-4 sm:mb-6 leading-tight">My Library</h1>
      <p class="text-base sm:text-lg md:text-xl text-gray-600 max-w-2xl mx-auto px-2">Your complete reading collection and insights from your Goodreads data</p>
    </div>

  <!-- Library Action Navbar -->
  <div class="bg-white rounded-2xl shadow-lg p-6 mb-8">
    <div class="flex flex-col sm:flex-row items-center justify-between gap-4">
      <!-- Left side: Quick Actions -->
      <div class="flex flex-wrap items-center gap-3">
        <a href="<%= new_book_path %>" 
           class="inline-flex items-center px-4 py-2 bg-gradient-to-r from-indigo-600 to-purple-600 text-white text-sm font-medium rounded-lg hover:from-indigo-700 hover:to-purple-700 transition-all duration-200 shadow-sm hover:shadow-md">
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
          </svg>
          Add New Book
        </a>
        
        <a href="<%= new_import_path %>" 
           class="inline-flex items-center px-4 py-2 bg-white border border-gray-300 text-gray-700 text-sm font-medium rounded-lg hover:bg-gray-50 transition-all duration-200">
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M9 19l3 3m0 0l3-3m-3 3V10"></path>
          </svg>
          Import Goodreads
        </a>
      </div>
      
      <!-- Right side: Library Management -->
      <div class="flex items-center gap-3">
        <% if @library_summary[:total] > 0 %>
          <button onclick="showClearLibraryModal()" 
                  class="inline-flex items-center px-4 py-2 border border-red-300 text-red-700 text-sm font-medium rounded-lg hover:bg-red-50 transition-all duration-200">
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
            </svg>
            Clear Library
          </button>
        <% end %>
        
        <span class="text-sm text-gray-500">
          <%= @library_summary[:total] %> books in library
        </span>
      </div>
    </div>
  </div>

  <!-- Success Message for Imported Books -->
  <% if @show_imported && flash[:notice] %>
    <div class="bg-green-50 border border-green-200 rounded-lg p-6">
      <div class="flex items-start">
        <div class="flex-shrink-0">
          <svg class="h-6 w-6 text-green-400" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3 flex-1">
          <h3 class="text-lg font-medium text-green-800 mb-2">
            üéâ Import Successful!
          </h3>
          <p class="text-sm text-green-700 mb-4">
            <%= flash[:notice] %> Your reading history has been added to your library.
          </p>
          
          <!-- Next Steps -->
          <div class="bg-green-100 rounded-lg p-4 mb-4">
            <h4 class="text-sm font-medium text-green-800 mb-2">What's next?</h4>
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-3">
              <%= link_to recommendations_path, 
                  class: "inline-flex items-center px-4 py-2 text-xs font-medium text-green-700 bg-green-200 border border-green-300 rounded-lg hover:bg-green-300 transition-colors duration-200" do %>
                <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
                </svg>
                Get AI Recommendations
              <% end %>
              
              <%= link_to next_book_books_path, 
                  class: "inline-flex items-center px-4 py-2 text-xs font-medium text-green-700 bg-green-200 border border-green-300 rounded-lg hover:bg-green-300 transition-colors duration-200" do %>
                <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
                </svg>
                Pick Next Book
              <% end %>
            </div>
          </div>
          
          <!-- Library Stats -->
          <div class="text-xs text-green-600">
            <p>Your library now contains <strong><%= @library_summary[:total] %></strong> books</p>
            <p>‚Ä¢ <strong><%= @library_summary[:to_read] %></strong> to read ‚Ä¢ <strong><%= @library_summary[:reading] %></strong> currently reading ‚Ä¢ <strong><%= @library_summary[:read] %></strong> completed</p>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Enhanced Library Summary - Focus on Reading Status -->
  <div class="bg-white rounded-2xl shadow-lg p-4 mb-6">
    <!-- Mobile: Grid 2x2 -->
    <div class="grid grid-cols-2 lg:hidden gap-4">
      <!-- To Read -->
      <div class="flex items-center justify-center space-x-2">
        <div class="w-2 h-2 bg-blue-500 rounded-full flex-shrink-0"></div>
        <div class="text-center min-w-0">
          <div class="text-xl font-bold text-blue-600 leading-none"><%= @library_summary[:to_read] %></div>
          <div class="text-xs text-gray-500 truncate">To Read</div>
        </div>
      </div>
      
      <!-- Currently Reading -->
      <div class="flex items-center justify-center space-x-2">
        <div class="w-2 h-2 bg-yellow-500 rounded-full flex-shrink-0"></div>
        <div class="text-center min-w-0">
          <div class="text-xl font-bold text-yellow-600 leading-none"><%= @library_summary[:reading] %></div>
          <div class="text-xs text-gray-500 truncate">Reading</div>
        </div>
      </div>
      
      <!-- Completed -->
      <div class="flex items-center justify-center space-x-2">
        <div class="w-2 h-2 bg-green-500 rounded-full flex-shrink-0"></div>
        <div class="text-center min-w-0">
          <div class="text-xl font-bold text-green-600 leading-none"><%= @library_summary[:read] %></div>
          <div class="text-xs text-gray-500 truncate">Completed</div>
        </div>
      </div>
      
      <!-- Total Books -->
      <div class="flex items-center justify-center space-x-2">
        <div class="w-2 h-2 bg-indigo-500 rounded-full flex-shrink-0"></div>
        <div class="text-center min-w-0">
          <div class="text-xl font-bold text-indigo-600 leading-none"><%= @library_summary[:total] %></div>
          <div class="text-xs text-gray-500 truncate">Total</div>
        </div>
      </div>
    </div>
    
    <!-- Desktop: Single line horizontal -->
    <div class="hidden lg:flex items-center justify-between space-x-8">
      <!-- To Read -->
      <div class="flex items-center space-x-2">
        <div class="w-2 h-2 bg-blue-500 rounded-full flex-shrink-0"></div>
        <div class="text-left min-w-0">
          <div class="text-2xl font-bold text-blue-600 leading-none"><%= @library_summary[:to_read] %></div>
          <div class="text-xs text-gray-500">To Read</div>
        </div>
      </div>
      
      <!-- Currently Reading -->
      <div class="flex items-center space-x-2">
        <div class="w-2 h-2 bg-yellow-500 rounded-full flex-shrink-0"></div>
        <div class="text-left min-w-0">
          <div class="text-2xl font-bold text-yellow-600 leading-none"><%= @library_summary[:reading] %></div>
          <div class="text-xs text-gray-500">Reading</div>
        </div>
      </div>
      
      <!-- Completed -->
      <div class="flex items-center space-x-2">
        <div class="w-2 h-2 bg-green-500 rounded-full flex-shrink-0"></div>
        <div class="text-left min-w-0">
          <div class="text-2xl font-bold text-green-600 leading-none"><%= @library_summary[:read] %></div>
          <div class="text-xs text-gray-500">Completed</div>
        </div>
      </div>
      
      <!-- Total Books -->
      <div class="flex items-center space-x-2">
        <div class="w-2 h-2 bg-indigo-500 rounded-full flex-shrink-0"></div>
        <div class="text-left min-w-0">
          <div class="text-2xl font-bold text-indigo-600 leading-none"><%= @library_summary[:total] %></div>
          <div class="text-xs text-gray-500">Total</div>
        </div>
      </div>
    </div>
  </div>

  <!-- Enhanced Filter Menu - Sleek Modern Design -->
  <div class="bg-white rounded-2xl p-6 border border-gray-200 shadow-sm">
    <h3 class="text-lg font-semibold text-gray-900 mb-6 text-center">Filter Your Library</h3>
    
    <!-- Sleek Horizontal Filter Bar -->
    <div class="flex flex-wrap justify-center gap-3">
      <%= link_to books_path, 
          class: "group relative px-6 py-3 rounded-xl text-sm font-medium transition-all duration-300 #{@status || @show_imported ? 'text-white bg-gradient-to-r from-indigo-600 to-purple-600 shadow-lg scale-105' : 'text-gray-700 bg-gray-50 hover:bg-gray-100 hover:scale-105'}" do %>
        <span class="relative z-10">All Books</span>
        <% if @status.nil? && !@show_imported %>
          <div class="absolute inset-0 bg-gradient-to-r from-indigo-600 to-purple-600 rounded-xl opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
        <% end %>
      <% end %>
      
      <!-- DEBUG: @status = <%= @status.inspect %>, class = <%= @status.class %> -->
      <% ['to_read', 'reading', 'read'].each do |reading_status| %>
        <% is_active = @status == reading_status %>
        <!-- DEBUG: reading_status = <%= reading_status.inspect %>, is_active = <%= is_active.inspect %> -->
        <a href="/books?status=<%= reading_status %>" 
           class="group relative px-6 py-3 rounded-xl text-sm font-medium transition-all duration-300 <%= is_active ? 'text-white bg-gradient-to-r from-indigo-600 to-purple-600 shadow-lg scale-105' : 'text-gray-700 bg-gray-50 hover:bg-gray-100 hover:scale-105' %>">
          <span class="relative z-10"><%= reading_status.humanize %></span>
          <% unless is_active %>
            <div class="absolute inset-0 bg-gradient-to-r from-indigo-600 to-purple-600 rounded-xl opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
          <% end %>
        </a>
      <% end %>
      
      <a href="/books?imported=true" 
         class="group relative px-6 py-3 rounded-xl text-sm font-medium transition-all duration-300 <%= @show_imported ? 'text-white bg-gradient-to-r from-indigo-600 to-purple-600 shadow-lg scale-105' : 'text-gray-700 bg-gray-50 hover:bg-gray-100 hover:scale-105' %>">
        <span class="relative z-10">Imported Books</span>
        <% if !@show_imported %>
          <div class="absolute inset-0 bg-gradient-to-r from-indigo-600 to-purple-600 rounded-xl opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
        <% end %>
      </a>
    </div>
  </div>

  <!-- Enhanced Next Book CTA - Sleek Design -->
  <div class="bg-gradient-to-r from-emerald-500 to-teal-600 rounded-xl sm:rounded-2xl p-6 sm:p-8 shadow-lg">
    <div class="text-center">
      <h2 class="text-xl sm:text-2xl font-bold text-white mb-3">Ready for your next adventure?</h2>
      <p class="text-sm sm:text-base text-emerald-100 mb-4 sm:mb-6">Get AI-powered recommendations based on your reading taste</p>
      <%= link_to "üìñ What's my next book?", next_book_books_path, 
          class: "w-full sm:w-auto inline-flex items-center justify-center px-6 sm:px-8 py-3 sm:py-4 border border-transparent text-base sm:text-lg font-semibold rounded-lg sm:rounded-xl text-emerald-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-white shadow-lg transition-all duration-200 transform hover:scale-105" %>
    </div>
  </div>

  <!-- Book Grid - Moved above footer -->
  <div class="space-y-6">
    <% if @show_imported %>
      <!-- Special header for imported books -->
      <div class="bg-gradient-to-r from-purple-50 to-indigo-50 rounded-xl p-6 border border-purple-200">
        <div class="flex items-center justify-between">
          <div>
            <h3 class="text-2xl font-bold text-gray-900 mb-2">üìö Imported from Goodreads</h3>
            <p class="text-gray-600">You have <%= @imported_count %> imported books in your library</p>
          </div>
          <div class="flex items-center space-x-4">
            <div class="text-right">
              <div class="text-3xl font-bold text-purple-600"><%= @imported_count %></div>
              <div class="text-sm text-gray-500">Books imported</div>
            </div>
            <%= link_to "View All Books", books_path, 
                class: "inline-flex items-center px-4 py-2 border border-purple-300 rounded-lg text-sm font-medium text-purple-700 bg-white hover:bg-purple-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-purple-500 transition-all duration-200" %>
          </div>
        </div>
      </div>
    <% else %>
      <h3 class="text-2xl font-bold text-gray-900">
        <% if @status %>
          <%= @status.humanize %> Books
        <% else %>
          All Books
        <% end %>
      </h3>
    <% end %>
    
    <% if @books.any? %>
      <div class="grid gap-4 sm:gap-6 grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4">
        <% @books.each do |book| %>
          <div class="bg-white overflow-hidden shadow-sm rounded-xl sm:rounded-2xl border border-gray-100 hover:shadow-xl transition-all duration-300 transform hover:-translate-y-1 hover:scale-[1.02]">
            <div class="p-4 sm:p-6">
              <!-- Book Cover and Metadata -->
              <div class="flex items-start space-x-3 sm:space-x-4 mb-3">
                <!-- Book Cover - Use Goodreads cover if available, fallback to initials -->
                <% if book.instance_variable_get(:@goodreads_cover_url).present? %>
                  <img src="<%= book.instance_variable_get(:@goodreads_cover_url) %>" 
                       alt="<%= book.title %>" 
                       class="w-14 h-18 sm:w-16 sm:h-20 object-cover rounded-lg shadow-sm flex-shrink-0"
                       onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';">
                <% end %>
                
                <!-- Fallback to initials if no cover -->
                <div class="w-14 h-18 sm:w-16 sm:h-20 bg-gradient-to-br from-indigo-400 to-purple-500 rounded-lg flex items-center justify-center text-white font-bold text-base sm:text-lg flex-shrink-0"
                     style="display: <%= book.instance_variable_get(:@goodreads_cover_url).present? ? 'none' : 'flex' %>;">
                  <%= book.title.split(' ').map(&:first).join('').upcase[0..1] %>
                </div>
                
                <div class="flex-1 min-w-0">
                  <div class="flex items-center justify-between mb-2">
                    <h3 class="text-base sm:text-lg font-semibold text-gray-900 truncate flex-1 mr-3"><%= book.title %></h3>
                    <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium
                      <%= case book.status
                          when 'to_read' then 'bg-blue-100 text-blue-800'
                          when 'reading' then 'bg-yellow-100 text-yellow-800'
                          when 'read' then 'bg-green-100 text-green-800'
                          else 'bg-gray-100 text-gray-800'
                          end %>">
                      <%= book.status.humanize %>
                    </span>
                  </div>
                  
                  <p class="text-sm text-gray-600 mb-2">By <%= book.author %></p>
                </div>
              </div>
              
              <div class="space-y-2 sm:space-y-3">
                <!-- Rating -->
                <div class="flex items-center justify-between">
                  <div class="flex items-center">
                    <% if book.rating %>
                      <div class="flex items-center">
                        <% book.rating.times do %>
                          <svg class="w-3 sm:w-4 h-3 sm:h-4 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                            <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                          </svg>
                        <% end %>
                        <span class="ml-1 sm:ml-2 text-xs sm:text-sm font-medium text-gray-700"><%= book.rating %>/5</span>
                      </div>
                    <% else %>
                      <span class="text-xs sm:text-sm text-gray-400">No rating</span>
                    <% end %>
                  </div>
                  
                  <!-- Action buttons removed - not implemented yet -->
                </div>
                
                <!-- Additional Metadata from Goodreads - Clean Text + Icons -->
                <div class="space-y-1.5 mb-3">
                  <% if book.pages.present? %>
                    <div class="flex items-center text-xs text-gray-500">
                      <svg class="w-3 h-3 mr-2 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
                      </svg>
                      <%= book.pages %> pages
                    </div>
                  <% end %>
                  
                  <% if book.date_added.present? %>
                    <div class="flex items-center text-xs text-gray-500">
                      <svg class="w-3 h-3 mr-2 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                      </svg>
                      Added <%= book.date_added.strftime("%b %Y") %>
                    </div>
                  <% end %>
                  
                  <% if book.date_read.present? %>
                    <div class="flex items-center text-xs text-gray-500">
                      <svg class="w-3 h-3 mr-2 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                      </svg>
                      Finished <%= book.date_read.strftime("%b %Y") %>
                    </div>
                  <% end %>
                  
                  <% if book.exclusive_shelf.present? %>
                    <div class="flex items-center text-xs text-gray-500">
                      <svg class="w-3 h-3 mr-2 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
                      </svg>
                      <%= book.exclusive_shelf.humanize %>
                    </div>
                  <% end %>
                </div>
                
                
                
                <!-- Goodreads Link if available -->
                <% if book.instance_variable_get(:@goodreads_link).present? %>
                  <div class="flex items-center justify-between">
                    <a href="<%= book.instance_variable_get(:@goodreads_link) %>" target="_blank" 
                       class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-lg text-white bg-gradient-to-r from-indigo-600 to-purple-600 hover:from-indigo-700 hover:to-purple-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-all duration-200 transform hover:scale-105 shadow-lg hover:shadow-xl">
                      <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
                      </svg>
                      Voir sur Goodreads
                    </a>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="text-center py-16">
        <div class="mx-auto h-16 w-16 mb-6 flex items-center justify-center rounded-full bg-gray-100">
          <svg class="h-8 w-8 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
          </svg>
        </div>
        <h3 class="text-lg font-semibold text-gray-900 mb-2">
          <% if @show_imported %>
            No imported books yet
          <% elsif @status %>
            No <%= @status.humanize.downcase %> books yet
          <% else %>
            Your library is empty
          <% end %>
        </h3>
        <p class="text-gray-600 mb-8 max-w-md mx-auto">
          <% if @show_imported %>
            Import your Goodreads library to see your complete reading history and get personalized recommendations.
          <% elsif @status %>
            Start building your <%= @status.humanize.downcase %> collection by adding books or importing from Goodreads.
          <% else %>
            Start building your personal library by adding books manually or importing from Goodreads.
          <% end %>
        </p>
        <div class="flex flex-col sm:flex-row gap-3 justify-center">
          <% if @show_imported %>
            <%= link_to "Import Goodreads", new_import_path, 
