<h1 class="text-2xl font-bold mb-4">My Library</h1>

<!-- Menu de filtres -->
<div class="mb-4 space-x-2">
  <!-- Bouton "All" actif si aucun filtre -->
  <%= link_to "All", books_path, class: "px-3 py-1 rounded #{'bg-blue-500 text-white' unless @status}" %>

  <!-- GÃ©nÃ¨re un bouton par statut -->
  <% Book.statuses.keys.each do |status| %>
    <%= link_to status.humanize, books_path(status: status),
        class: "px-3 py-1 rounded #{'bg-blue-500 text-white' if @status == status}" %>
  <% end %>
</div>

<!-- Bouton Next Book -->
<%= link_to "ðŸ“– What's my next book?", next_book_books_path, class: "bg-green-500 text-white px-4 py-2 rounded" %>

<!-- Liste des livres -->
<div class="mt-6 grid gap-4">
  <% @books.each do |book| %>
    <div class="p-4 border rounded shadow">
      <h2 class="text-lg font-semibold"><%= book.title %></h2>
      <p class="text-gray-700">By <%= book.author %></p>
      <p>Status: <%= book.status.humanize %></p>
      <p>Rating: <%= book.rating || "N/A" %></p>
    </div>
  <% end %>
</div>
