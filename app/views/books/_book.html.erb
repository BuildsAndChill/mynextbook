<div id="<%= dom_id book %>" class="bg-white shadow rounded-lg border border-gray-200 p-6">
  <div class="space-y-4">
    <div class="flex items-start justify-between">
      <div class="flex-1">
        <h3 class="text-xl font-semibold text-gray-900 mb-2"><%= book.title %></h3>
        <p class="text-gray-600 mb-3">By <%= book.author %></p>
      </div>
      <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-blue-100 text-blue-800">
        <%= book.status.humanize %>
      </span>
    </div>

    <dl class="grid grid-cols-2 gap-4">
      <div class="bg-gray-50 p-3 rounded-md">
        <dt class="text-sm font-medium text-gray-500">Rating</dt>
        <dd class="mt-1 flex items-center">
          <% if book.rating %>
            <div class="flex items-center">
              <% book.rating.times do %>
                <svg class="w-4 h-4 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                </svg>
              <% end %>
              <span class="ml-1 text-sm text-gray-900"><%= book.rating %></span>
            </div>
          <% else %>
            <span class="text-sm text-gray-400">No rating</span>
          <% end %>
        </dd>
      </div>

      <div class="bg-gray-50 p-3 rounded-md">
        <dt class="text-sm font-medium text-gray-500">Status</dt>
        <dd class="mt-1 text-sm text-gray-900"><%= book.status.humanize %></dd>
      </div>
    </dl>

    <div class="flex space-x-3 pt-4 border-t border-gray-200">
      <%= link_to "View Details", book_path(book), class: "text-indigo-600 hover:text-indigo-900 text-sm font-medium" %>
      <%= link_to "Edit", edit_book_path(book), class: "text-gray-600 hover:text-gray-900 text-sm font-medium" %>
    </div>
  </div>
</div>
