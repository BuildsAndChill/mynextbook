<div class="max-w-4xl mx-auto space-y-6">
  <div class="text-center">
    <h1 class="text-3xl font-bold text-gray-900">ðŸ“š Your AI Recommendations</h1>
    <p class="mt-2 text-sm text-gray-600">Personalized book suggestions based on your preferences</p>
  </div>

  <!-- AI Error display -->
  <% if @ai_error.present? %>
    <div class="rounded-md bg-red-50 p-4 border border-red-200">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-4 w-4 text-red-400" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800">AI Service Error</h3>
          <div class="mt-2 text-sm text-red-700">
            <p><%= @ai_error %></p>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <!-- AI Response -->
  <div class="bg-white shadow-lg rounded-xl border border-gray-200 overflow-hidden">
    <div class="px-6 py-4 bg-gradient-to-r from-indigo-500 to-purple-600">
      <h2 class="text-lg font-semibold text-white">AI Recommendations</h2>
    </div>
    <div class="p-6">
      <% if @ai_raw.present? %>
        <div class="prose prose-indigo max-w-none">
          <div class="whitespace-pre-wrap text-gray-700 leading-relaxed"><%= @ai_raw %></div>
        </div>
      <% else %>
        <div class="text-center py-8">
          <svg class="mx-auto h-8 w-8 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.172 16.172a4 4 0 015.656 0M9 12h6m-6-4h6m2 5.291A7.962 7.962 0 0112 15c-2.34 0-4.47-.881-6.08-2.33" />
          </svg>
          <h3 class="mt-2 text-sm font-medium text-gray-900">No AI response received</h3>
          <p class="mt-1 text-sm text-gray-500">Please try again or check your request.</p>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Debug section -->
  <div class="bg-gray-50 rounded-lg border border-gray-200 p-6">
    <div class="flex items-center mb-4">
      <svg class="h-4 w-4 text-gray-400 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
      </svg>
      <h4 class="text-sm font-medium text-gray-900">Debug Information</h4>
    </div>
    <div class="bg-white p-4 rounded-md border border-gray-200">
      <h5 class="text-xs font-medium text-gray-500 uppercase tracking-wide mb-2">Prompt sent to AI</h5>
      <pre class="whitespace-pre-wrap text-sm text-gray-700 bg-gray-50 p-3 rounded border"><%= @user_prompt || "(Prompt not available)" %></pre>
    </div>
  </div>

  <!-- Action buttons -->
  <div class="flex flex-col sm:flex-row gap-3 justify-center pt-6 border-t border-gray-200">
    <%= link_to "Get New Recommendations", new_recommendation_path, class: "inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-colors duration-200" %>
    <%= link_to "â† Back to Library", books_path, class: "inline-flex items-center px-6 py-3 border border-gray-300 text-base font-medium rounded-md shadow-sm text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-colors duration-200" %>
  </div>
</div>
