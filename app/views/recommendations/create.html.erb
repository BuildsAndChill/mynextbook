<!-- Page : Affichage des recommandations IA -->
<h1 class="text-2xl font-bold mb-4">📚 Tes recommandations</h1>

<!-- Bloc d'erreur IA -->
<% if @ai_error.present? %>
  <div class="p-3 bg-red-100 text-red-800 rounded mb-4">
    ⚠️ Erreur IA : <%= @ai_error %>
  </div>
<% end %>

<!-- Résultat brut renvoyé par l'IA -->
<div class="p-4 rounded-xl bg-white shadow whitespace-pre-wrap mb-6">
  <% if @ai_raw.present? %>
    <%= @ai_raw %>
  <% else %>
    <span class="text-gray-500 italic">Aucune réponse reçue de l'IA.</span>
  <% end %>
</div>

<!-- Séparateur visuel -->
<hr class="my-6 border-gray-300">

<!-- Affichage du prompt envoyé à l'IA pour debug -->
<div class="bg-gray-50 p-4 rounded-lg border">
  <h4 class="font-medium mb-2">🛠 Prompt envoyé à l'IA</h4>
  <pre class="whitespace-pre-wrap text-sm text-gray-700">
<%= @user_prompt || "(Prompt non disponible)" %>
  </pre>
</div>
