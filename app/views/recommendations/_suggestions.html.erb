<!-- AI Response Display - Exact same layout as new.html.erb -->
<% if @ai_response %>
  <div id="ai-response-display" class="space-y-6">
    <!-- Brief Section - Simplified: Only "What you tend to like" -->
    <% if @parsed_response&.dig(:brief) && @parsed_response[:brief][:likes]&.any? %>
      <div>
        <h4 class="text-sm font-medium text-green-700 mb-2 flex items-center">
          <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
          </svg>
          What you tend to like
        </h4>
        <ul class="space-y-1">
          <% @parsed_response[:brief][:likes].each do |point| %>
            <li class="text-sm text-gray-700 flex items-start">
              <span class="w-1.5 h-1.5 bg-green-500 rounded-full mt-2 mr-2 flex-shrink-0"></span>
              <%= point %>
            </li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <!-- Top Picks Section -->
    <% if @parsed_response&.dig(:picks)&.any? %>
      <div class="border-t pt-6">
        <h4 class="text-lg font-semibold text-gray-900 mb-4">
          <% if local_assigns[:is_refined] %>
            Your Refined Picks
          <% else %>
            Top Picks for You
          <% end %>
        </h4>
        <div class="space-y-4">
          <% @parsed_response[:picks].each do |pick| %>
            <div class="bg-gray-50 rounded-lg p-4">
              <!-- Book Cover and Metadata -->
              <div class="flex items-start space-x-4">
                <!-- Book Cover - Use Google Books cover if available, fallback to initials -->
                <% if pick[:cover_url].present? %>
                  <img src="<%= pick[:cover_url] %>" 
                       alt="<%= pick[:title] %>" 
                       class="w-16 h-20 object-cover rounded-lg shadow-sm"
                       onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';">
                <% end %>
                
                <!-- Fallback to initials if no cover -->
                <div class="w-16 h-20 bg-gradient-to-br from-indigo-400 to-purple-500 rounded-lg flex items-center justify-center text-white font-bold text-lg flex-shrink-0"
                     style="display: <%= pick[:cover_url].present? ? 'none' : 'flex' %>;">
                  <%= pick[:title].split(' ').map(&:first).join('').upcase[0..1] %>
                </div>
                
                <div class="flex-1 min-w-0">
                  <h5 class="text-lg font-semibold text-gray-900 mb-1"><%= pick[:title] %></h5>
                  <p class="text-sm text-gray-600 mb-2">by <%= pick[:author] %></p>
                  
                  <!-- Rating Display -->
                  <% if pick[:rating].present? %>
                    <div class="flex items-center mb-2">
                      <% full_stars = pick[:rating].to_f.floor %>
                      <% has_half_star = (pick[:rating].to_f % 1) != 0 %>
                      
                      <!-- Full stars -->
                      <% full_stars.times do %>
                        <svg class="w-4 h-4 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                          <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                        </svg>
                      <% end %>
                      
                      <!-- Half star -->
                      <% if has_half_star %>
                        <svg class="w-4 h-4 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                          <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                        </svg>
                      <% end %>
                      
                      <!-- Empty stars -->
                      <% empty_stars = 5 - full_stars - (has_half_star ? 1 : 0) %>
                      <% empty_stars.times do %>
                        <svg class="w-4 h-4 text-gray-300" fill="currentColor" viewBox="0 0 20 20">
                          <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                        </svg>
                      <% end %>
                      
                      <span class="ml-2 text-sm font-medium text-gray-700"><%= pick[:rating] %>/5</span>
                      <% if pick[:review_count].present? %>
                        <span class="ml-2 text-sm text-gray-500">(<%= pick[:review_count] %> reviews)</span>
                      <% end %>
                    </div>
                  <% end %>
                  
                  <!-- Additional Metadata -->
                  <% if pick[:page_count].present? || pick[:published_date].present? || pick[:categories].present? %>
                    <div class="flex flex-wrap gap-2 text-xs text-gray-500 mb-2">
                      <% if pick[:page_count].present? %>
                        <span class="bg-gray-100 px-2 py-1 rounded"><%= pick[:page_count] %> pages</span>
                      <% end %>
                      <% if pick[:published_date].present? %>
                        <span class="bg-gray-100 px-2 py-1 rounded"><%= pick[:published_date] %></span>
                      <% end %>
                      <% if pick[:categories].present? %>
                        <span class="bg-gray-100 px-2 py-1 rounded"><%= pick[:categories] %></span>
                      <% end %>
                    </div>
                  <% end %>
                  
                  <% if pick[:pitch].present? %>
                    <p class="text-sm text-gray-700 mb-2"><%= pick[:pitch] %></p>
                  <% end %>
                  
                  <% if pick[:why].present? %>
                    <p class="text-xs text-gray-600 mb-3"><strong>Why this pick:</strong> <%= pick[:why] %></p>
                  <% end %>
                  
                  <!-- Confidence Meter -->
                  <div class="flex items-center justify-between">
                    <div class="flex items-center space-x-2">
                      <span class="text-xs text-gray-500">Confidence:</span>
                      <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium
                        <%= case pick[:confidence]&.downcase
                            when 'high' then 'bg-green-100 text-green-800'
                            when 'medium' then 'bg-yellow-100 text-yellow-800'
                            when 'low' then 'bg-red-100 text-red-800'
                            else 'bg-gray-100 text-gray-800'
                            end %>">
                        <%= pick[:confidence] || 'Medium' %>
                      </span>
                    </div>
                    
                    <!-- Feedback Buttons -->
                    <div class="flex space-x-2">
                      <button class="feedback-btn p-1.5 text-gray-400 hover:text-green-600 transition-colors duration-200" 
                              data-book-title="<%= pick[:title] %>" 
                              data-book-author="<%= pick[:author] %>" 
                              data-feedback="like" 
                              title="I like this">
                        <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                          <path fill-rule="evenodd" d="M3.172 5.172a4 4 0 015.656 0L10 6.343l1.172-1.171a4 4 0 115.656 5.656L10 17.657l-6.828-6.829a4 4 0 010-5.656z" clip-rule="evenodd"></path>
                        </svg>
                      </button>
                      
                      <button class="feedback-btn p-1.5 text-gray-400 hover:text-red-600 transition-colors duration-200" 
                              data-book-title="<%= pick[:title] %>" 
                              data-book-author="<%= pick[:author] %>" 
                              data-feedback="dislike" 
                              title="Not for me">
                        <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"></path>
                        </svg>
                      </button>
                      
                      <button class="feedback-btn p-1.5 text-gray-400 hover:text-blue-600 transition-colors duration-200" 
                              data-book-title="<%= pick[:title] %>" 
                              data-book-author="<%= pick[:author] %>" 
                              data-feedback="save" 
                              title="Save to reading list">
                        <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                          <path d="M5 4a2 2 0 012-2h6a2 2 0 012 2v14l-5-2.5L5 18V4z"></path>
                        </svg>
                      </button>
                      
                      <button class="feedback-btn p-1.5 text-gray-400 hover:text-purple-600 transition-colors duration-200" 
                              data-book-title="<%= pick[:title] %>" 
                              data-book-author="<%= pick[:author] %>" 
                              data-feedback="more_info" 
                              title="More info">
                        <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                          <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-8-3a1 1 0 00-.867.5 1 1 0 11-1.731-1A3 3 0 0113 8a3.001 3.001 0 01-2 2.83V11a1 1 0 11-2 0v-1a1 1 0 011-1 1 1 0 100-2zm0 8a1 1 0 100-2 1 1 0 000 2z" clip-rule="evenodd"></path>
                        </svg>
                      </button>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
<% elsif local_assigns[:show_empty_state] %>
  <!-- Empty State for Index (Initial Form) -->
  <div class="text-center py-12">
    <div class="mx-auto h-16 w-16 mb-4 flex items-center justify-center rounded-full bg-gray-100">
      <svg class="h-8 w-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
      </svg>
    </div>
    <h3 class="text-lg font-medium text-gray-900 mb-2">Ready for your next book?</h3>
    <p class="text-gray-500">Fill out the form on the left to get personalized recommendations based on your mood and preferences.</p>
  </div>
<% else %>
  <!-- Empty State for Show (When AI Response but No Suggestions) -->
  <div class="text-center py-12">
    <div class="mx-auto h-16 w-16 mb-4 flex items-center justify-center rounded-full bg-red-100">
      <svg class="h-8 w-8 text-red-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.732 16.5c-.77.833.192 2.5 1.732 2.5z"></path>
      </svg>
    </div>
    <h3 class="text-lg font-medium text-gray-900 mb-2">Something went wrong</h3>
    <p class="text-gray-500">We got a response but couldn't parse the suggestions properly.</p>
    <a href="/recommendations" class="mt-4 inline-flex items-center px-4 py-2 bg-blue-600 text-white text-sm font-medium rounded-lg hover:bg-blue-700 transition-all duration-200">
      Try Again
    </a>
  </div>
<% end %>
