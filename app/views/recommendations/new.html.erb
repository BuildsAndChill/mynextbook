                    <div class="h-5 bg-gray-200 rounded-full w-16"></div>
                  </div>
                  
                  <div class="h-3 bg-gray-200 rounded w-24 mb-2"></div>
                  <div class="h-3 bg-gray-200 rounded w-full mb-3"></div>
                  
                  <!-- Why this pick skeleton -->
