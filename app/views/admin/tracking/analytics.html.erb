<div class="min-h-screen bg-gray-50 py-8">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="mb-8">
      <h1 class="text-3xl font-bold text-gray-900">Analytics - User Tracking</h1>
      <p class="mt-2 text-gray-600">Statistiques globales des sessions et interactions utilisateur</p>
    </div>

    <!-- Navigation Admin -->
    <div class="mb-8">
      <nav class="flex space-x-4">
        <%= link_to "Dashboard", admin_dashboard_path, class: "px-3 py-2 rounded-md text-sm font-medium text-gray-700 hover:text-gray-900 hover:bg-gray-100" %>
        <%= link_to "Tracking", admin_tracking_index_path, class: "px-3 py-2 rounded-md text-sm font-medium text-gray-700 hover:text-gray-900 hover:bg-gray-100" %>
        <%= link_to "Subscribers", admin_subscribers_path, class: "px-3 py-2 rounded-md text-sm font-medium text-gray-700 hover:text-gray-900 hover:bg-gray-100" %>
        <%= link_to "Users", admin_users_path, class: "px-3 py-2 rounded-md text-sm font-medium text-gray-700 hover:text-gray-900 hover:bg-gray-100" %>
        <%= link_to "Analytics", analytics_admin_tracking_index_path, class: "px-3 py-2 rounded-md text-sm font-medium bg-indigo-100 text-indigo-700" %>
      </nav>
    </div>

    <!-- Stats Overview -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
      <!-- Total Sessions -->
      <div class="bg-white overflow-hidden shadow rounded-lg">
        <div class="p-5">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <svg class="h-6 w-6 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
              </svg>
            </div>
            <div class="ml-5 w-0 flex-1">
              <dl>
                <dt class="text-sm font-medium text-gray-500 truncate">Sessions Totales</dt>
                <dd class="text-lg font-medium text-gray-900"><%= @total_sessions %></dd>
              </dl>
            </div>
          </div>
        </div>
      </div>

      <!-- Active Sessions -->
      <div class="bg-white overflow-hidden shadow rounded-lg">
        <div class="p-5">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <svg class="h-6 w-6 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
              </svg>
            </div>
            <div class="ml-5 w-0 flex-1">
              <dl>
                <dt class="text-sm font-medium text-gray-500 truncate">Sessions Actives</dt>
                <dd class="text-lg font-medium text-gray-900"><%= @active_sessions %></dd>
              </dl>
            </div>
          </div>
        </div>
      </div>

      <!-- Total Interactions -->
      <div class="bg-white overflow-hidden shadow rounded-lg">
        <div class="p-5">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <svg class="h-6 w-6 text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
              </svg>
            </div>
            <div class="ml-5 w-0 flex-1">
              <dl>
                <dt class="text-sm font-medium text-gray-500 truncate">Interactions</dt>
                <dd class="text-lg font-medium text-gray-900"><%= @total_interactions %></dd>
              </dl>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Action Type Distribution -->
    <div class="bg-white shadow rounded-lg mb-8">
      <div class="px-4 py-5 sm:p-6">
        <h3 class="text-lg leading-6 font-medium text-gray-900 mb-4">Distribution par Type d'Action</h3>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
          <% @action_stats.each do |action_type, count| %>
            <div class="bg-gray-50 p-4 rounded-lg">
              <div class="flex items-center justify-between">
                <span class="text-sm font-medium text-gray-700">
                  <%= action_type.humanize %>
                </span>
                <span class="text-lg font-bold text-gray-900">
                  <%= count %>
                </span>
              </div>
              <div class="mt-2">
                <div class="w-full bg-gray-200 rounded-full h-2">
                  <div class="bg-indigo-600 h-2 rounded-full" style="width: <%= (count.to_f / @total_interactions * 100).round(1) %>%"></div>
                </div>
                <span class="text-xs text-gray-500 mt-1">
                  <%= (count.to_f / @total_interactions * 100).round(1) %>%
                </span>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Top Sessions by Interactions -->
    <div class="bg-white shadow rounded-lg mb-8">
      <div class="px-4 py-5 sm:p-6">
        <h3 class="text-lg leading-6 font-medium text-gray-900 mb-4">Top Sessions par Interactions</h3>
        <div class="space-y-3">
          <% @top_sessions.each_with_index do |session, index| %>
            <div class="flex items-center justify-between p-3 bg-gray-50 rounded-lg">
              <div class="flex items-center space-x-3">
                <div class="flex-shrink-0">
                  <span class="inline-flex items-center justify-center h-8 w-8 rounded-full bg-indigo-100 text-indigo-800 text-sm font-medium">
                    <%= index + 1 %>
                  </span>
                </div>
                <div class="flex-1 min-w-0">
                  <p class="text-sm font-medium text-gray-900 truncate">
                    Session: <%= session.session_identifier.first(8) %>...
                  </p>
                  <p class="text-sm text-gray-500">
                    Dernière activité: <%= session.last_activity.strftime("%d/%m %H:%M") %>
                  </p>
                </div>
              </div>
              <div class="ml-4 flex-shrink-0">
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                  <%= session.interactions.count %> interactions
                </span>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Recent Interactions -->
    <div class="bg-white shadow rounded-lg">
      <div class="px-4 py-5 sm:p-6">
        <h3 class="text-lg leading-6 font-medium text-gray-900 mb-4">Interactions Récentes</h3>
        <div class="space-y-3">
          <% @recent_interactions.each do |interaction| %>
            <div class="flex items-center justify-between p-3 bg-gray-50 rounded-lg">
              <div class="flex-1 min-w-0">
                <p class="text-sm font-medium text-gray-900">
                  <%= interaction.action_type.humanize %>
                </p>
                <p class="text-sm text-gray-500 truncate">
                  <%= interaction.context || 'Sans contexte' %> • 
                  Session: <%= interaction.user_session.session_identifier.first(8) %>... • 
                  <%= interaction.timestamp.strftime("%d/%m %H:%M") %>
                </p>
              </div>
              <div class="ml-4 flex-shrink-0">
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium
                  <%= case interaction.action_type
                      when 'recommendation_created' then 'bg-blue-100 text-blue-800'
                      when 'recommendation_refined' then 'bg-purple-100 text-purple-800'
                      when 'email_captured' then 'bg-green-100 text-green-800'
                      when 'page_viewed' then 'bg-gray-100 text-gray-800'
                      else 'bg-yellow-100 text-yellow-800'
                      end %>">
                  <%= interaction.action_type.split('_').first %>
                </span>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
