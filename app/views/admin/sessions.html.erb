<div class="min-h-screen bg-gray-50 py-8">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="mb-8">
      <h1 class="text-3xl font-bold text-gray-900">Sessions</h1>
      <p class="mt-2 text-sm text-gray-600">
        Vue d'ensemble de toutes les sessions utilisateur avec leur statut et leurs données associées
      </p>
    </div>

    <!-- Navigation -->
    <div class="mb-8">
      <%= render 'admin/shared/navigation' %>
    </div>

    <!-- Stats Cards -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
      <!-- Total Sessions -->
      <div class="bg-white overflow-hidden shadow rounded-lg">
        <div class="p-5">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <svg class="h-6 w-6 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
              </svg>
            </div>
            <div class="ml-5 w-0 flex-1">
              <dl>
                <dt class="text-sm font-medium text-gray-500 truncate">Sessions Totales</dt>
                <dd class="text-lg font-medium text-gray-900"><%= @tracking_stats[:sessions][:total] %></dd>
              </dl>
            </div>
          </div>
        </div>
        <div class="bg-gray-50 px-5 py-3">
          <div class="text-sm">
            <span class="text-green-600">+<%= @tracking_stats[:recent_sessions] %></span>
            <span class="text-gray-400">ce jour</span>
            <span class="ml-2 text-blue-600">(<%= @tracking_stats[:active_sessions] %> actives)</span>
          </div>
        </div>
      </div>

      <!-- Total Interactions -->
      <div class="bg-white overflow-hidden shadow rounded-lg">
        <div class="p-5">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <svg class="h-6 w-6 text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
              </svg>
            </div>
            <div class="ml-5 w-0 flex-1">
              <dl>
                <dt class="text-sm font-medium text-gray-500 truncate">Interactions</dt>
                <dd class="text-lg font-medium text-gray-900"><%= @tracking_stats[:interactions][:total] %></dd>
              </dl>
            </div>
          </div>
        </div>
        <div class="bg-gray-50 px-5 py-3">
          <div class="text-sm">
            <span class="text-purple-600">+<%= @tracking_stats[:interactions][:recent] %></span>
            <span class="text-gray-400">ce jour</span>
          </div>
        </div>
      </div>

      <!-- Sessions par statut -->
      <div class="bg-white overflow-hidden shadow rounded-lg">
        <div class="p-5">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <svg class="h-6 w-6 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
              </svg>
            </div>
            <div class="ml-5 w-0 flex-1">
              <dl>
                <dt class="text-sm font-medium text-gray-500 truncate">Subscribers</dt>
                <dd class="text-lg font-medium text-gray-900"><%= @tracking_stats[:sessions][:subscribed] %></dd>
              </dl>
            </div>
          </div>
        </div>
        <div class="bg-gray-50 px-5 py-3">
          <div class="text-sm">
            <span class="text-blue-600"><%= @tracking_stats[:sessions][:logged_in] %></span>
            <span class="text-gray-400">connectés</span>
            <span class="ml-2 text-gray-600"><%= @tracking_stats[:sessions][:unlogged] %> anonymes</span>
          </div>
        </div>
      </div>

      <!-- Heatmap Preview -->
      <div class="bg-white overflow-hidden shadow rounded-lg">
        <div class="p-5">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <svg class="h-6 w-6 text-orange-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
              </svg>
            </div>
            <div class="ml-5 w-0 flex-1">
              <dl>
                <dt class="text-sm font-medium text-gray-500 truncate">Heatmap</dt>
                <dd class="text-lg font-medium text-gray-900">Activité</dd>
              </dl>
            </div>
          </div>
        </div>
        <div class="bg-gray-50 px-5 py-3">
          <div class="text-sm">
            <span class="text-orange-600">Voir</span>
            <span class="text-gray-400">ci-dessous</span>
          </div>
        </div>
      </div>
    </div>

    <!-- Export Buttons -->
    <div class="mb-6 flex justify-between items-center">
      <div class="text-sm text-gray-600">
        Total: <%= @sessions.count %> sessions affichées
      </div>
      <div class="flex space-x-3">
        <%= link_to "Export CSV", admin_sessions_path(format: :csv), class: "inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" %>
        <%= link_to "Export JSON", admin_sessions_path(format: :json), class: "inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" %>
      </div>
    </div>

    <!-- Sessions List -->
    <div class="space-y-4">
      <% @sessions.each_with_index do |session, session_index| %>
        <div class="bg-white shadow rounded-lg overflow-hidden">
          <!-- Session Header -->
          <button class="w-full px-6 py-4 text-left hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-inset" 
                  onclick="toggleSession('session-<%= session_index %>')"
                  aria-expanded="false"
                  aria-controls="session-content-<%= session_index %>">
            <div class="flex items-center justify-between">
              <div class="flex items-center space-x-3">
                <div class="flex-shrink-0">
                  <div class="h-10 w-10 rounded-full <%= case session.instance_variable_get(:@status)
                                                          when 'logged_in' then 'bg-green-100'
                                                          when 'subscribed' then 'bg-blue-100'
                                                          else 'bg-gray-100'
                                                          end %> flex items-center justify-center">
                    <svg class="h-5 w-5 <%= case session.instance_variable_get(:@status)
                                           when 'logged_in' then 'text-green-600'
                                           when 'subscribed' then 'text-blue-600'
                                           else 'text-gray-600'
                                           end %>" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                    </svg>
                  </div>
                </div>
                <div class="flex-1 min-w-0">
                  <p class="text-sm font-medium text-gray-900">
                    Session: <%= session.session_identifier&.truncate(20) || "ID: #{session.id}" %>
                  </p>
                  <p class="text-sm text-gray-500">
                    <%= session.interactions.count %> interactions • <%= session.created_at.strftime("%d/%m/%Y à %H:%M") %>
                  </p>
                </div>
              </div>
              <div class="flex items-center space-x-4">
                <!-- Status Badge -->
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium 
                  <%= case session.instance_variable_get(:@status)
                      when 'logged_in' then 'bg-green-100 text-green-800'
                      when 'subscribed' then 'bg-blue-100 text-blue-800'
                      else 'bg-gray-100 text-gray-800'
                      end %>">
                  <%= session.instance_variable_get(:@status)&.humanize %>
                </span>
                
                <!-- Linked Emails Count -->
                <% linked_emails = session.instance_variable_get(:@linked_emails) %>
                <% if linked_emails.any? %>
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-purple-100 text-purple-800">
                    <%= linked_emails.count %> email(s)
                  </span>
                <% end %>
                
                <svg id="session-<%= session_index %>-icon" class="h-5 w-5 text-gray-400 transform transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                </svg>
              </div>
            </div>
          </button>
          
          <!-- Session Content -->
          <div id="session-content-<%= session_index %>" class="hidden border-t border-gray-200">
            <div class="px-6 py-4">
              <!-- Session Info -->
              <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-6">
                <div>
                  <h4 class="text-sm font-medium text-gray-700 mb-2">Informations de la session</h4>
                  <div class="space-y-2 text-sm text-gray-600">
                    <p><strong>Session ID:</strong> <%= session.session_identifier %></p>
                    <p><strong>Créée le:</strong> <%= session.created_at.strftime("%d/%m/%Y à %H:%M") %></p>
                    <p><strong>Dernière activité:</strong> <%= session.interactions.maximum(:created_at)&.strftime("%d/%m/%Y à %H:%M") || "N/A" %></p>
                    <p><strong>Statut:</strong> 
                      <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium 
                        <%= case session.instance_variable_get(:@status)
                            when 'logged_in' then 'bg-green-100 text-green-800'
                            when 'subscribed' then 'bg-blue-100 text-blue-800'
                            else 'bg-gray-100 text-gray-800'
                            end %>">
                        <%= session.instance_variable_get(:@status)&.humanize %>
                      </span>
                    </p>
                  </div>
                </div>
                
                <div>
                  <h4 class="text-sm font-medium text-gray-700 mb-2">Emails liés</h4>
                  <div class="space-y-2">
                    <% linked_emails = session.instance_variable_get(:@linked_emails) %>
                    <% if linked_emails.any? %>
                      <% linked_emails.each do |email_data| %>
                        <div class="bg-gray-50 p-3 rounded border">
                          <p class="text-sm font-medium text-gray-900"><%= email_data[:email] %></p>
                          <p class="text-xs text-gray-500">
                            <%= email_data[:source] %> • <%= email_data[:timestamp].strftime("%d/%m/%Y à %H:%M") %>
                          </p>
                        </div>
                      <% end %>
                    <% else %>
                      <p class="text-sm text-gray-500 italic">Aucun email lié</p>
                    <% end %>
                  </div>
                </div>
              </div>
              
              <!-- Interactions List -->
              <div>
                <h4 class="text-sm font-medium text-gray-700 mb-3">Interactions (<%= session.interactions.count %>)</h4>
                <div class="space-y-3">
                  <% session.interactions.order(:created_at).each_with_index do |interaction, interaction_index| %>
                    <div class="border border-gray-200 rounded-lg p-3">
                      <div class="flex items-center justify-between">
                        <div class="flex-1">
                          <p class="text-sm font-medium text-gray-900">
                            <%= interaction.action_type&.humanize %>
                          </p>
                          <p class="text-sm text-gray-500">
                            <%= interaction.created_at.strftime("%d/%m/%Y à %H:%M") %>
                            <% if interaction.context.present? %>
                              • Contexte: <%= interaction.context %>
                            <% end %>
                          </p>
                          <% if interaction.metadata.present? %>
                            <p class="text-xs text-gray-400 mt-1">
                              Métadonnées: <%= interaction.metadata.to_json.truncate(100) %>
                            </p>
                          <% end %>
                        </div>
                        <div class="flex-shrink-0">
                          <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                            #<%= interaction_index + 1 %>
                          </span>
                        </div>
                      </div>
                    </div>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>

    <!-- Footer Info -->
    <div class="mt-8 text-center text-sm text-gray-500">
      Affichage des 100 dernières sessions
    </div>
  </div>
</div>

<script>
function toggleSession(sessionId) {
  const content = document.getElementById(sessionId.replace('session-', 'session-content-'));
  const icon = document.getElementById(sessionId + '-icon');
  
  if (content.classList.contains('hidden')) {
    content.classList.remove('hidden');
    icon.style.transform = 'rotate(180deg)';
  } else {
    content.classList.add('hidden');
    icon.style.transform = 'rotate(0deg)';
  }
}
</script>
