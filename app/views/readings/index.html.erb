<div class="space-y-8">
  <!-- Header Section -->
  <div class="sm:flex sm:items-center sm:justify-between">
    <div>
      <h1 class="text-3xl font-bold text-gray-900">My Reading History</h1>
      <p class="mt-3 text-base text-gray-600">Track all the books you've read and imported from Goodreads</p>
    </div>
    <div class="mt-6 sm:mt-0">
      <%= link_to "Import from Goodreads", new_import_path, class: "inline-flex items-center px-5 py-3 border border-transparent rounded-lg shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-colors duration-200" %>
    </div>
  </div>

  <!-- Notifications -->
  <% if notice %>
    <div class="rounded-lg bg-green-50 border border-green-200 p-4">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-green-400" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3">
          <p class="text-sm font-medium text-green-800"><%= notice %></p>
        </div>
      </div>
    </div>
  <% end %>
  
  <% if alert %>
    <div class="rounded-lg bg-yellow-50 border border-yellow-200 p-4">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-yellow-400" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3">
          <p class="text-sm font-medium text-yellow-800 whitespace-pre-wrap"><%= alert %></p>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Stats Card -->
  <div class="bg-white border border-gray-200 rounded-xl shadow-sm overflow-hidden">
    <div class="px-6 py-6">
      <dl>
        <dt class="text-sm font-medium text-gray-500 uppercase tracking-wide">Total Books Read</dt>
        <dd class="mt-2 text-4xl font-bold text-gray-900"><%= Reading.count %></dd>
      </dl>
    </div>
  </div>

  <!-- Readings List -->
  <div class="bg-white border border-gray-200 rounded-xl shadow-sm overflow-hidden">
    <div class="px-6 py-5 border-b border-gray-200 bg-gray-50">
      <h3 class="text-lg font-semibold text-gray-900">Reading List</h3>
      <p class="mt-1 text-sm text-gray-600">Your complete reading history</p>
    </div>
    
    <% if @readings.any? %>
      <ul class="divide-y divide-gray-200">
        <% @readings.each_with_index do |reading, index| %>
          <li class="px-6 py-5 hover:bg-gray-50 transition-colors duration-200">
            <div class="flex items-start justify-between">
              <!-- Left side: Number, title, author, rating, shelves -->
              <div class="flex items-start flex-1 min-w-0">
                <div class="flex-shrink-0">
                  <div class="w-10 h-10 bg-indigo-100 border-2 border-indigo-200 rounded-full flex items-center justify-center">
                    <span class="text-sm font-bold text-indigo-700"><%= index + 1 %></span>
                  </div>
                </div>
                <div class="ml-5 flex-1 min-w-0">
                  <!-- Title and Rating Row -->
                  <div class="flex items-center flex-wrap gap-3 mb-2">
                    <h4 class="text-base font-semibold text-gray-900 truncate"><%= reading.title %></h4>
                    <% if reading.my_rating && reading.my_rating > 0 %>
                      <div class="flex items-center bg-yellow-50 border border-yellow-200 px-3 py-1.5 rounded-full">
                        <% reading.my_rating.times do %>
                          <svg class="w-4 h-4 text-yellow-500" fill="currentColor" viewBox="0 0 20 20">
                            <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                          </svg>
                        <% end %>
                        <span class="ml-2 text-sm font-semibold text-yellow-700"><%= reading.my_rating %></span>
                      </div>
                    <% end %>
                  </div>
                  
                  <!-- Author -->
                  <p class="text-base text-gray-600 mb-3">By <%= reading.author %></p>
                  
                  <!-- Shelves as tags -->
                  <% if reading.shelves.present? %>
                    <% 
                      # Clean up shelves data - remove any "0" artifacts and duplicates
                      clean_shelves = reading.shelves
                        .split(',')
                        .map(&:strip)
                        .reject { |s| s.blank? || s == '0' }
                        .uniq
                        .first(3)
                    %>
                    <% if clean_shelves.any? %>
                      <div class="flex flex-wrap gap-2">
                        <% clean_shelves.each do |shelf| %>
                          <span class="inline-flex items-center px-3 py-1.5 rounded-lg text-sm font-medium bg-gray-100 text-gray-700 border border-gray-200">
                            <%= shelf %>
                          </span>
                        <% end %>
                      </div>
                    <% end %>
                  <% end %>
                </div>
              </div>

              <!-- Right side: Date information -->
              <div class="flex flex-col items-end text-sm text-gray-500 ml-6">
                <% if reading.date_read %>
                  <div class="text-right">
                    <p class="text-gray-900 font-semibold text-base"><%= reading.date_read.strftime("%B %Y") %></p>
                    <p class="text-sm text-gray-500"><%= reading.date_read.strftime("%Y-%m-%d") %></p>
                  </div>
                <% else %>
                  <div class="text-right">
                    <p class="text-gray-400 text-sm font-medium">No date</p>
                  </div>
                <% end %>
              </div>
            </div>
          </li>
        <% end %>
      </ul>
    <% else %>
      <div class="text-center py-16">
        <svg class="mx-auto h-16 w-16 text-gray-300" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
        </svg>
        <h3 class="mt-4 text-lg font-medium text-gray-900">No readings yet</h3>
        <p class="mt-2 text-base text-gray-600">Import your reading history from Goodreads to get started.</p>
        <div class="mt-8">
          <%= link_to "Import from Goodreads", new_import_path, class: "inline-flex items-center px-6 py-3 border border-transparent rounded-lg shadow-sm text-base font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-colors duration-200" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
