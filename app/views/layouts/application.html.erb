<!DOCTYPE html>
<html>
  <head>
    <title>My Next Book</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "tailwind", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "chat_interface", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
    
    <style>
      /* Global mobile overflow prevention */
      @media (max-width: 640px) {
        /* Force all max-w-7xl containers to respect mobile width */
        .max-w-7xl {
          max-width: 100vw !important;
          overflow-x: hidden;
        }
        
        /* Ensure body and html don't overflow */
        body, html {
          overflow-x: hidden;
          max-width: 100vw;
        }
        
        /* Force all direct children to respect width */
        .max-w-7xl > * {
          max-width: 100vw !important;
          overflow-x: hidden;
        }
        
        /* Ensure navigation and footer respect mobile width */
        nav, footer {
          max-width: 100vw !important;
          overflow-x: hidden;
        }
        
        /* Force all grid layouts to respect mobile width */
        .grid {
          max-width: 100vw !important;
          overflow-x: hidden;
        }
      }

      /* Custom styles for user dropdown */
      #userDropdown {
        position: absolute !important;
        z-index: 9999 !important;
        background: white !important;
        box-shadow: 0 10px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04) !important;
        border: 1px solid #e5e7eb !important;
        border-radius: 0.5rem !important;
      }
      
      /* Ensure dropdown is above everything on mobile */
      @media (max-width: 768px) {
        #userDropdown {
          z-index: 99999 !important;
          position: fixed !important;
          top: auto !important;
          right: 1rem !important;
          left: 1rem !important;
          width: auto !important;
          max-width: calc(100vw - 2rem) !important;
        }
      }
    </style>
  </head>

  <body class="bg-gray-50">
    <!-- Navigation -->
    <nav class="bg-white shadow-sm border-b border-gray-200">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center h-16">
          <!-- Logo & Brand -->
          <div class="flex items-center">
            <%= link_to root_path, class: "flex items-center space-x-3" do %>
              <div class="h-8 w-8 bg-gradient-to-r from-indigo-500 to-purple-600 rounded-lg flex items-center justify-center">
                <svg class="h-5 w-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
                </svg>
              </div>
              <span class="text-xl font-bold text-gray-900">My Next Book</span>
            <% end %>
          </div>



          <!-- Right Side Actions -->
          <div class="flex items-center space-x-4">


            <!-- User Menu -->
            <% if user_signed_in? %>
              <div class="relative">
                <!-- User Avatar Dropdown Trigger -->
                <button id="userDropdownButton"
                        class="flex items-center space-x-2 text-gray-700 hover:text-gray-900 transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 rounded-lg p-1">
                  <div class="h-8 w-8 bg-gradient-to-r from-indigo-400 to-purple-500 rounded-full flex items-center justify-center">
                    <span class="text-sm font-medium text-white"><%= current_user.email.first.upcase %></span>
                  </div>
                  <span class="text-sm font-medium hidden sm:block"><%= current_user.email %></span>
                  <svg class="w-4 h-4 text-gray-400 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                  </svg>
                </button>
                
                <!-- Dropdown Menu -->
                <div id="userDropdown" class="absolute right-0 top-full mt-1 w-48 bg-white rounded-lg shadow-lg border border-gray-200 py-1 z-[9999] hidden">
                  <!-- User Info Header -->
                  <div class="px-4 py-3 border-b border-gray-100">
                    <p class="text-sm font-medium text-gray-900"><%= current_user.email %></p>
                    <p class="text-xs text-gray-500">Signed in</p>
                  </div>
                  
                  <!-- Menu Items -->
                  <%= link_to books_path, 
                      class: "flex items-center px-4 py-2 text-sm text-gray-700 hover:bg-gray-50 transition-colors duration-200" do %>
                    <svg class="w-4 h-4 mr-3 text-indigo-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
                    </svg>
                    My Library
                  <% end %>
                  
                  <%= link_to new_import_path, 
                      class: "flex items-center px-4 py-2 text-sm text-gray-700 hover:bg-gray-50 transition-colors duration-200" do %>
                    <svg class="w-4 h-4 mr-3 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M9 19l3 3m0 0l3-3m-3 3V10"></path>
                    </svg>
                    Import Books
                  <% end %>
                  
                  <%= link_to recommendations_path, 
                      class: "flex items-center px-4 py-2 text-sm text-gray-700 hover:bg-gray-50 transition-colors duration-200" do %>
                    <svg class="w-4 h-4 mr-3 text-purple-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
                    </svg>
                    Get Recommendations
                  <% end %>
                  
                  <!-- Divider -->
                  <div class="border-t border-gray-100 my-1"></div>
                  
                  <!-- Sign Out -->
                <%= button_to destroy_user_session_path, method: :delete, 
                      class: "w-full text-left flex items-center px-4 py-2 text-sm text-red-600 hover:bg-red-50 transition-colors duration-200" do %>
                    <svg class="w-4 h-4 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path>
                    </svg>
                    Sign Out
                <% end %>
                </div>
              </div>
            <% else %>
              <div class="flex items-center space-x-3">
                <%= link_to "Sign In", new_user_session_path, class: "text-gray-700 hover:text-indigo-600 px-3 py-2 text-sm font-medium transition-colors duration-200" %>
                <%= link_to "Sign Up", new_user_registration_path, class: "bg-gradient-to-r from-indigo-600 to-purple-600 text-white px-4 py-2 rounded-lg text-sm font-medium hover:from-indigo-700 hover:to-purple-700 transition-all duration-200 shadow-sm hover:shadow-md" %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </nav>

    <!-- Flash Messages -->
    <% if notice %>
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 mt-4">
        <div class="bg-green-50 border border-green-200 rounded-lg p-4">
          <div class="flex">
            <div class="flex-shrink-0">
              <svg class="h-5 w-5 text-green-400" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
              </svg>
            </div>
            <div class="ml-3">
              <p class="text-sm font-medium text-green-800"><%= notice %></p>
            </div>
          </div>
        </div>
      </div>
    <% end %>

    <% if alert %>
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 mt-4">
        <div class="bg-red-50 border border-red-200 rounded-lg p-4">
          <div class="flex">
            <div class="flex-shrink-0">
              <svg class="h-5 w-5 text-red-400" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
              </svg>
            </div>
            <div class="ml-3">
              <p class="text-sm font-medium text-red-800"><%= alert %></p>
            </div>
          </div>
        </div>
      </div>
    <% end %>

    <!-- Main Content -->
    <main>
      <%= yield %>
    </main>

    <!-- Footer -->
    <footer class="bg-white border-t border-gray-200 mt-24">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
        <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
          <div class="col-span-1 md:col-span-2">
            <div class="flex items-center space-x-3 mb-4">
              <div class="h-8 w-8 bg-gradient-to-r from-indigo-500 to-purple-600 rounded-lg flex items-center justify-center">
                <svg class="h-5 w-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
                </svg>
              </div>
              <span class="text-xl font-bold text-gray-900">My Next Book</span>
            </div>
            <p class="text-gray-600 mb-4">Discover your next great read with AI-powered recommendations. No account required to get started.</p>
            <p class="text-sm text-gray-500">Use the form on the home page to get instant recommendations, or sign up for enhanced personalization.</p>
          </div>
          
          <div>
            <h3 class="text-sm font-semibold text-gray-900 mb-4">Features</h3>
            <ul class="space-y-2 text-sm text-gray-600">
              <li><%= link_to "Import Goodreads", new_import_path, class: "hover:text-gray-900 transition-colors duration-200" %></li>
              <li><%= link_to "Personal Library", books_path, class: "hover:text-gray-900 transition-colors duration-200" %></li>
            </ul>
          </div>
          
          <div>
            <h3 class="text-sm font-semibold text-gray-900 mb-4">Account</h3>
            <ul class="space-y-2 text-sm text-gray-600">
              <% if user_signed_in? %>
                <li><%= link_to "My Account", edit_user_registration_path, class: "hover:text-gray-900 transition-colors duration-200" %></li>
                <li><%= button_to "Sign Out", destroy_user_session_path, method: :delete, class: "hover:text-gray-900 transition-colors duration-200 bg-transparent border-0 cursor-pointer text-left p-0" %></li>
              <% else %>
                <li><%= link_to "Sign In", new_user_session_path, class: "hover:text-gray-900 transition-colors duration-200" %></li>
                <li><%= link_to "Sign Up", new_user_registration_path, class: "hover:text-gray-900 transition-colors duration-200" %></li>
              <% end %>
            </ul>
          </div>
        </div>
        
        <div class="mt-8 pt-8 border-t border-gray-200">
          <p class="text-center text-sm text-gray-500">&copy; 2024 My Next Book. All rights reserved.</p>
        </div>
      </div>
    </footer>

    <script>
      // User dropdown menu functionality
      document.addEventListener('DOMContentLoaded', function() {
        console.log('üîç Initializing user dropdown...');
        
        const dropdownButton = document.getElementById('userDropdownButton');
        const dropdown = document.getElementById('userDropdown');
        
        console.log('Dropdown button found:', !!dropdownButton);
        console.log('Dropdown menu found:', !!dropdown);
        
        if (!dropdownButton || !dropdown) {
          console.error('‚ùå Missing elements:', { button: !!dropdownButton, dropdown: !!dropdown });
          return;
        }
        
        const arrow = dropdownButton.querySelector('svg');
        console.log('Arrow found:', !!arrow);

        function toggleDropdown() {
          console.log('üîÑ Toggle dropdown called');
          console.log('Current hidden state:', dropdown.classList.contains('hidden'));
          
          if (dropdown.classList.contains('hidden')) {
            dropdown.classList.remove('hidden');
            arrow.style.transform = 'rotate(180deg)';
            
            // On mobile, position the dropdown better
            if (window.innerWidth <= 768) {
              const buttonRect = dropdownButton.getBoundingClientRect();
              const dropdownHeight = dropdown.offsetHeight;
              const viewportHeight = window.innerHeight;
              
              // Check if dropdown would go below viewport
              if (buttonRect.bottom + dropdownHeight > viewportHeight) {
                // Position above the button
                dropdown.style.top = 'auto';
                dropdown.style.bottom = '100%';
                dropdown.style.marginBottom = '0.5rem';
              } else {
                // Position below the button
                dropdown.style.top = '100%';
                dropdown.style.bottom = 'auto';
                dropdown.style.marginTop = '0.5rem';
              }
            }
            
            console.log('‚úÖ Dropdown opened');
          } else {
            dropdown.classList.add('hidden');
            arrow.style.transform = 'rotate(0deg)';
            console.log('‚úÖ Dropdown closed');
          }
        }

        dropdownButton.addEventListener('click', function(e) {
          console.log('üéØ Button clicked!');
            e.preventDefault();
            e.stopPropagation();
          toggleDropdown();
          });
          
        // Close dropdown when clicking outside
        document.addEventListener('click', function(e) {
          // Only handle click outside if dropdown is actually open
          if (!dropdown.classList.contains('hidden')) {
            if (!dropdownButton.contains(e.target) && !dropdown.contains(e.target)) {
              console.log('üîÑ Click outside, closing dropdown');
              dropdown.classList.add('hidden');
              arrow.style.transform = 'rotate(0deg)';
            }
          }
        });

        // Close dropdown when pressing escape
          document.addEventListener('keydown', function(e) {
            if (e.key === 'Escape') {
            console.log('üîÑ Escape pressed, closing dropdown');
            dropdown.classList.add('hidden');
            arrow.style.transform = 'rotate(0deg)';
            }
          });
          
        console.log('‚úÖ User dropdown initialized successfully');
      });
    </script>
  </body>
</html>
