    </footer>

         <script>
       // Sign Out function - No form, direct JavaScript
       function signOut() {
         console.log('üö™ Sign Out clicked');
         
         // Create a hidden form dynamically
         const form = document.createElement('form');
         form.method = 'POST';
         form.action = '<%= destroy_user_session_path %>';
         form.style.display = 'none';
         
         // Add CSRF token
         const csrfToken = document.querySelector('meta[name="csrf-token"]').getAttribute('content');
         const csrfInput = document.createElement('input');
         csrfInput.type = 'hidden';
         csrfInput.name = 'authenticity_token';
         csrfInput.value = csrfToken;
         form.appendChild(csrfInput);
         
         // Add method override for DELETE
         const methodInput = document.createElement('input');
         methodInput.type = 'hidden';
         methodInput.name = '_method';
         methodInput.value = 'DELETE';
         form.appendChild(methodInput);
         
         // Submit the form
         document.body.appendChild(form);
         form.submit();
       }
       
       // User dropdown menu functionality - Turbo-compatible
       function initializeUserDropdown() {
        const dropdownButton = document.getElementById('userDropdownButton');
        const dropdown = document.getElementById('userDropdown');
        
        if (!dropdownButton || !dropdown) {
          return;
        }
        
        const arrow = dropdownButton.querySelector('svg');
        
        function toggleDropdown() {
          console.log('üîÑ toggleDropdown called');
          const isHidden = freshDropdown.classList.contains('hidden');
          console.log('üîç Current hidden state:', isHidden);
          
          if (isHidden) {
            freshDropdown.classList.remove('hidden');
            if (freshArrow) freshArrow.style.transform = 'rotate(180deg)';
            console.log('‚úÖ Dropdown opened');
          } else {
            freshDropdown.classList.add('hidden');
            if (freshArrow) freshArrow.style.transform = 'rotate(0deg)';
            console.log('‚úÖ Dropdown closed');
          }
        }

        // Remove existing event listeners to prevent duplicates
        const newButton = dropdownButton.cloneNode(true);
        const newDropdown = dropdown.cloneNode(true);
        dropdownButton.parentNode.replaceChild(newButton, dropdownButton);
        dropdown.parentNode.replaceChild(newDropdown, dropdown);
        
        // Get fresh references
        const freshButton = document.getElementById('userDropdownButton');
        const freshDropdown = document.getElementById('userDropdown');
        const freshArrow = freshButton.querySelector('svg');
        
        freshButton.addEventListener('click', function(e) {
          console.log('üéØ CLICK DETECTED on dropdown button!');
          e.preventDefault();
          toggleDropdown();
        });
        
        // Mark as properly initialized
        freshButton._hasClickEvent = true;
        console.log('‚úÖ Dropdown properly initialized with click event');
        
        // Test if the button is actually clickable
        console.log('üîç Button element:', freshButton);
        console.log('üîç Button HTML:', freshButton.outerHTML);
        console.log('üîç Button disabled:', freshButton.disabled);
        console.log('üîç Button style pointer-events:', getComputedStyle(freshButton).pointerEvents);
          
        // Close dropdown when clicking outside
        document.addEventListener('click', function(e) {
          if (!freshDropdown.classList.contains('hidden')) {
            if (!freshButton.contains(e.target) && !freshDropdown.contains(e.target)) {
              freshDropdown.classList.add('hidden');
              if (freshArrow) freshArrow.style.transform = 'rotate(0deg)';
            }
          }
        });

        // Close dropdown when pressing escape
        document.addEventListener('keydown', function(e) {
          if (e.key === 'Escape' && !freshDropdown.classList.contains('hidden')) {
            freshDropdown.classList.add('hidden');
            if (freshArrow) freshArrow.style.transform = 'rotate(0deg)';
          }
        });
      }

      // Initialize on DOM ready
      document.addEventListener('DOMContentLoaded', function() {
        console.log('üöÄ DOM ready - initializing dropdown');
        initializeUserDropdown();
      });
      
      // Re-initialize on Turbo navigation
      document.addEventListener('turbo:load', function() {
        console.log('üîÑ turbo:load - reinitializing dropdown');
        initializeUserDropdown();
      });
      
      document.addEventListener('turbo:render', function() {
        console.log('üîÑ turbo:render - reinitializing dropdown');
        initializeUserDropdown();
      });
      
      document.addEventListener('turbo:frame-load', function() {
        console.log('üîÑ turbo:frame-load - reinitializing dropdown');
        initializeUserDropdown();
      });
      
      // Fallback: listen to all Turbo events
      document.addEventListener('turbo:before-visit', function() {
        console.log('üîÑ turbo:before-visit');
      });
      
      document.addEventListener('turbo:visit', function() {
        console.log('üîÑ turbo:visit');
      });
      
      document.addEventListener('turbo:before-cache', function() {
        console.log('üîÑ turbo:before-cache');
      });
      
      document.addEventListener('turbo:before-render', function() {
        console.log('üîÑ turbo:before-render');
      });
      
      document.addEventListener('turbo:render', function() {
        console.log('üîÑ turbo:render');
      });
      
      document.addEventListener('turbo:load', function() {
        console.log('üîÑ turbo:load');
      });
      
      // Fallback: aggressive polling for dropdown
      setInterval(function() {
        const dropdownButton = document.getElementById('userDropdownButton');
        const dropdown = document.getElementById('userDropdown');
        
        if (dropdownButton && dropdown) {
          // Check if dropdown has click event by testing actual click
          const hasClickEvent = dropdownButton._hasClickEvent === true;
          
          if (!hasClickEvent) {
            console.log('üîß Dropdown missing click event - reinitializing');
            initializeUserDropdown();
          }
        }
      }, 500); // Check every 500ms for faster response
      
      // Also reinitialize on any DOM mutation (Ultra-aggressive approach)
      const observer = new MutationObserver(function(mutations) {
        mutations.forEach(function(mutation) {
          if (mutation.type === 'childList') {
            const dropdownButton = document.getElementById('userDropdownButton');
            if (dropdownButton && !dropdownButton._hasClickEvent) {
              console.log('üîß DOM mutation detected - reinitializing dropdown');
              setTimeout(initializeUserDropdown, 100); // Small delay to ensure DOM is ready
            }
          }
        });
      });
      
      observer.observe(document.body, {
        childList: true,
        subtree: true
      });
    </script>
  </body>
