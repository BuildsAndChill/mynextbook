<!DOCTYPE html>
<html>
  <head>
    <title>My Next Book</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "tailwind", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "chat_interface", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
    
    <style>
      /* Global mobile overflow prevention */
      @media (max-width: 640px) {
        /* Force all max-w-7xl containers to respect mobile width */
        .max-w-7xl {
          max-width: 100vw !important;
          overflow-x: hidden;
        }
        
        /* Ensure body and html don't overflow */
        body, html {
          overflow-x: hidden;
          max-width: 100vw;
        }
        
        /* Force all direct children to respect width */
        .max-w-7xl > * {
          max-width: 100vw !important;
          overflow-x: hidden;
        }
        
        /* Ensure navigation and footer respect mobile width */
        nav, footer {
          max-width: 100vw !important;
          overflow-x: hidden;
        }
        
        /* Force all grid layouts to respect mobile width */
        .grid {
          max-width: 100vw !important;
          overflow-x: hidden;
        }
      }
    </style>
  </head>

  <body class="bg-gray-50">
    <!-- Navigation -->
    <nav class="bg-white shadow-sm border-b border-gray-200">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center h-16">
          <!-- Logo & Brand -->
          <div class="flex items-center">
            <%= link_to root_path, class: "flex items-center space-x-3" do %>
              <div class="h-8 w-8 bg-gradient-to-r from-indigo-500 to-purple-600 rounded-lg flex items-center justify-center">
                <svg class="h-5 w-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
                </svg>
              </div>
              <span class="text-xl font-bold text-gray-900">My Next Book</span>
            <% end %>
          </div>



          <!-- Right Side Actions -->
          <div class="flex items-center space-x-4">


            <!-- User Menu -->
            <% if user_signed_in? %>
              <div class="flex items-center space-x-3">
                <!-- My Library Link -->
                <%= link_to books_path, 
                    class: "text-indigo-600 hover:text-indigo-700 px-3 py-2 text-sm font-medium transition-colors duration-200 bg-transparent border border-indigo-200 rounded-lg hover:bg-indigo-50" do %>
                  <div class="flex items-center">
                    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
                    </svg>
                    My Library
                  </div>
                <% end %>
                
                <!-- Temporary direct Sign Out link for testing -->
                <%= button_to destroy_user_session_path, method: :delete, 
                    class: "text-red-600 hover:text-red-700 px-3 py-2 text-sm font-medium transition-colors duration-200 bg-transparent border border-red-200 rounded-lg hover:bg-red-50" do %>
                  <div class="flex items-center">
                    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path>
                    </svg>
                    Sign Out
                  </div>
                <% end %>
                
                <!-- User Avatar (dropdown disabled for now) -->
                <div class="flex items-center space-x-2 text-gray-700">
                  <div class="h-8 w-8 bg-gradient-to-r from-indigo-400 to-purple-500 rounded-full flex items-center justify-center">
                    <span class="text-sm font-medium text-white"><%= current_user.email.first.upcase %></span>
                  </div>
                  <span class="text-sm font-medium"><%= current_user.email %></span>
                </div>
              </div>
            <% else %>
              <div class="flex items-center space-x-3">
                <%= link_to "Sign In", new_user_session_path, class: "text-gray-700 hover:text-indigo-600 px-3 py-2 text-sm font-medium transition-colors duration-200" %>
                <%= link_to "Sign Up", new_user_registration_path, class: "bg-gradient-to-r from-indigo-600 to-purple-600 text-white px-4 py-2 rounded-lg text-sm font-medium hover:from-indigo-700 hover:to-purple-700 transition-all duration-200 shadow-sm hover:shadow-md" %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </nav>

    <!-- Flash Messages -->
    <% if notice %>
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 mt-4">
        <div class="bg-green-50 border border-green-200 rounded-lg p-4">
          <div class="flex">
            <div class="flex-shrink-0">
              <svg class="h-5 w-5 text-green-400" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
              </svg>
            </div>
            <div class="ml-3">
              <p class="text-sm font-medium text-green-800"><%= notice %></p>
            </div>
          </div>
        </div>
      </div>
    <% end %>

    <% if alert %>
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 mt-4">
        <div class="bg-red-50 border border-red-200 rounded-lg p-4">
          <div class="flex">
            <div class="flex-shrink-0">
              <svg class="h-5 w-5 text-red-400" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
              </svg>
            </div>
            <div class="ml-3">
              <p class="text-sm font-medium text-red-800"><%= alert %></p>
            </div>
          </div>
        </div>
      </div>
    <% end %>

    <!-- Main Content -->
    <main>
      <%= yield %>
    </main>

    <!-- Footer -->
    <footer class="bg-white border-t border-gray-200 mt-24">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
        <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
          <div class="col-span-1 md:col-span-2">
            <div class="flex items-center space-x-3 mb-4">
              <div class="h-8 w-8 bg-gradient-to-r from-indigo-500 to-purple-600 rounded-lg flex items-center justify-center">
                <svg class="h-5 w-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
                </svg>
              </div>
              <span class="text-xl font-bold text-gray-900">My Next Book</span>
            </div>
            <p class="text-gray-600 mb-4">Discover your next great read with AI-powered recommendations. No account required to get started.</p>
            <p class="text-sm text-gray-500">Use the form on the home page to get instant recommendations, or sign up for enhanced personalization.</p>
          </div>
          
          <div>
            <h3 class="text-sm font-semibold text-gray-900 mb-4">Features</h3>
            <ul class="space-y-2 text-sm text-gray-600">
              <li><%= link_to "Import Goodreads", new_import_path, class: "hover:text-gray-900 transition-colors duration-200" %></li>
              <li><%= link_to "Personal Library", books_path, class: "hover:text-gray-900 transition-colors duration-200" %></li>
            </ul>
          </div>
          
          <div>
            <h3 class="text-sm font-semibold text-gray-900 mb-4">Account</h3>
            <ul class="space-y-2 text-sm text-gray-600">
              <% if user_signed_in? %>
                <li><%= link_to "My Account", edit_user_registration_path, class: "hover:text-gray-900 transition-colors duration-200" %></li>
                <li><%= button_to "Sign Out", destroy_user_session_path, method: :delete, class: "hover:text-gray-900 transition-colors duration-200 bg-transparent border-0 cursor-pointer text-left p-0" %></li>
              <% else %>
                <li><%= link_to "Sign In", new_user_session_path, class: "hover:text-gray-900 transition-colors duration-200" %></li>
                <li><%= link_to "Sign Up", new_user_registration_path, class: "hover:text-gray-900 transition-colors duration-200" %></li>
              <% end %>
            </ul>
          </div>
        </div>
        
        <div class="mt-8 pt-8 border-t border-gray-200">
          <p class="text-center text-sm text-gray-500">&copy; 2024 My Next Book. All rights reserved.</p>
        </div>
      </div>
    </footer>

    <script>
      // Simple and reliable user menu dropdown
      document.addEventListener('DOMContentLoaded', function() {
        console.log('DOM loaded, initializing user menu...');
        
        const userMenuButton = document.getElementById('user-menu-button');
        const userMenuDropdown = document.getElementById('user-menu-dropdown');
        
        console.log('User menu button found:', !!userMenuButton);
        console.log('User menu dropdown found:', !!userMenuDropdown);
        
        if (userMenuButton && userMenuDropdown) {
          console.log('Setting up user menu event listeners...');
          
          // Simple toggle function
          function toggleMenu() {
            console.log('Toggle menu called');
            userMenuDropdown.classList.toggle('hidden');
            console.log('Dropdown hidden:', userMenuDropdown.classList.contains('hidden'));
          }
          
          // Add click event
          userMenuButton.addEventListener('click', function(e) {
            console.log('Button clicked');
            e.preventDefault();
            e.stopPropagation();
            toggleMenu();
          });
          
          // Close when clicking outside
          document.addEventListener('click', function(e) {
            if (!userMenuButton.contains(e.target) && !userMenuDropdown.contains(e.target)) {
              userMenuDropdown.classList.add('hidden');
            }
          });
          
          // Close when pressing escape
          document.addEventListener('keydown', function(e) {
            if (e.key === 'Escape') {
              userMenuDropdown.classList.add('hidden');
            }
          });
          
          console.log('User menu event listeners set up successfully');
        } else {
          console.error('User menu elements not found!');
        }
      });
    </script>
  </body>
</html>
